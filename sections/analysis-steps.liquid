{% style %}
  /* ==========================================================================
     Analysis Steps Section
     ========================================================================== */

  .ans {
    --ease-out-expo: cubic-bezier(0.16, 1, 0.3, 1);
    width: 100%;
    overflow: hidden;
    position: relative;
    background-color: var(--section-bg);
    padding: var(--padding-top) 0 var(--padding-bottom);
  }

  .ans__texture {
    position: absolute; inset: 0; pointer-events: none; z-index: 0;
    opacity: var(--texture-opacity);
  }
  .ans__texture::before, .ans__texture::after { content: ''; position: absolute; inset: 0; }
  .ans__texture::before {
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.85' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)' opacity='0.04'/%3E%3C/svg%3E");
    background-size: 200px 200px;
  }
  .ans__texture::after {
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 512 512' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='f'%3E%3CfeTurbulence type='turbulence' baseFrequency='0.02 0.08' numOctaves='3' seed='2' stitchTiles='stitch'/%3E%3CfeColorMatrix type='saturate' values='0'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23f)' opacity='0.035'/%3E%3C/svg%3E");
    background-size: 512px 512px;
  }

  .ans__container {
    position: relative; z-index: 1;
    max-width: 1200px; margin: 0 auto; padding: 0 40px;
  }

  /* Header */
  .ans__header { text-align: center; margin-bottom: 48px; }

  .ans__heading {
    font-family: 'Georgia', 'Times New Roman', serif;
    font-size: var(--heading-size); font-weight: 400; font-style: italic;
    line-height: 1.2; color: var(--heading-color); margin: 0 0 16px;
  }

  .ans__subtitle {
    font-size: var(--body-size); font-style: italic;
    line-height: 1.6; color: var(--text-color); margin: 0 auto; max-width: 620px;
  }

  /* Main layout: steps left, images right */
  .ans__layout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 48px;
    align-items: start;
  }

  /* Steps */
  .ans__steps { display: flex; flex-direction: column; gap: 28px; }

  .ans__step {
    display: flex; align-items: flex-start; gap: 18px;
  }

  .ans__step-num {
    width: 44px; height: 44px; border-radius: 50%;
    background: var(--num-bg); color: var(--num-text);
    display: flex; align-items: center; justify-content: center;
    font-family: 'Georgia', 'Times New Roman', serif;
    font-size: 20px; font-weight: 400; font-style: italic;
    flex-shrink: 0; margin-top: 2px;
  }

  .ans__step-content { flex: 1; }

  .ans__step-title {
    font-family: 'Georgia', 'Times New Roman', serif;
    font-size: var(--step-title-size); font-weight: 700;
    color: var(--heading-color); margin: 0 0 6px; line-height: 1.3;
  }

  .ans__step-desc {
    font-size: var(--body-size); line-height: 1.65;
    color: var(--text-color); margin: 0;
  }

  /* Images stack */
  .ans__images {
    display: flex; flex-direction: column; gap: 14px;
  }

  .ans__image {
    width: 100%; border-radius: 10px; overflow: hidden;
    box-shadow: 0 2px 12px rgba(0,0,0,0.06);
  }

  .ans__image img {
    width: 100%; height: auto; display: block; object-fit: cover;
    aspect-ratio: 16 / 9;
  }

  /* Footer quote */
  .ans__footer {
    margin-top: 24px; text-align: right;
  }

  .ans__footer-text {
    font-family: 'Georgia', 'Times New Roman', serif;
    font-size: calc(var(--body-size) + 1px); font-style: italic;
    color: var(--heading-color); margin: 0; opacity: 0.85;
  }

  /* Animations */
  [data-ans-animate] {
    opacity: 0; transform: translateY(24px);
    transition: opacity 0.7s var(--ease-out-expo), transform 0.7s var(--ease-out-expo);
  }
  [data-ans-animate].is-visible { opacity: 1; transform: translateY(0); }

  /* Responsive */
  @media screen and (max-width: 768px) {
    .ans__container { padding: 0 20px; }
    .ans__heading { font-size: calc(var(--heading-size) * 0.62); }
    .ans__layout { grid-template-columns: 1fr; gap: 32px; }
    .ans__images { order: -1; }
    .ans__footer { text-align: center; }
    .ans__step-num { width: 38px; height: 38px; font-size: 17px; }
  }

  @media screen and (max-width: 480px) {
    .ans__container { padding: 0 16px; }
    .ans__heading { font-size: calc(var(--heading-size) * 0.52); }
    .ans__step { gap: 14px; }
  }
{% endstyle %}

{% assign step_blocks = section.blocks | where: 'type', 'step' %}
{% assign image_blocks = section.blocks | where: 'type', 'image' %}

<section
  class="ans"
  id="ans-{{ section.id }}"
  style="
    --section-bg: {{ section.settings.section_bg }};
    --heading-color: {{ section.settings.heading_color }};
    --text-color: {{ section.settings.text_color }};
    --num-bg: {{ section.settings.number_bg }};
    --num-text: {{ section.settings.number_text }};
    --heading-size: {{ section.settings.heading_font_size }}px;
    --step-title-size: {{ section.settings.step_title_font_size }}px;
    --body-size: {{ section.settings.body_font_size }}px;
    --texture-opacity: {{ section.settings.texture_opacity | divided_by: 100.0 }};
    --padding-top: {{ section.settings.padding_top }}px;
    --padding-bottom: {{ section.settings.padding_bottom }}px;
  "
>
  {% if section.settings.show_texture %}<div class="ans__texture"></div>{% endif %}

  <div class="ans__container">
    <div class="ans__header" data-ans-animate data-delay="0">
      {% if section.settings.heading != blank %}
        <h2 class="ans__heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.subtitle != blank %}
        <p class="ans__subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>

    <div class="ans__layout">
      <div class="ans__steps">
        {% for block in step_blocks %}
          <div class="ans__step" {{ block.shopify_attributes }} data-ans-animate data-delay="{{ forloop.index }}">
            <div class="ans__step-num">{{ forloop.index }}</div>
            <div class="ans__step-content">
              {% if block.settings.title != blank %}
                <h4 class="ans__step-title">{{ block.settings.title }}</h4>
              {% endif %}
              {% if block.settings.description != blank %}
                <p class="ans__step-desc">{{ block.settings.description }}</p>
              {% endif %}
            </div>
          </div>
        {% endfor %}

        {% if section.settings.footer_text != blank %}
          <div class="ans__footer" data-ans-animate data-delay="{{ step_blocks.size | plus: 1 }}">
            <p class="ans__footer-text">{{ section.settings.footer_text }}</p>
          </div>
        {% endif %}
      </div>

      {% if image_blocks.size > 0 %}
        <div class="ans__images" data-ans-animate data-delay="1">
          {% for block in image_blocks %}
            {% if block.settings.image != blank %}
              <div class="ans__image" {{ block.shopify_attributes }}>
                {{ block.settings.image | image_url: width: 700 | image_tag: loading: 'lazy', widths: '400,550,700' }}
              </div>
            {% endif %}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var s = document.getElementById('ans-{{ section.id }}');
    if (!s) return;
    var els = s.querySelectorAll('[data-ans-animate]');
    var obs = new IntersectionObserver(function (entries) {
      entries.forEach(function (e) {
        if (e.isIntersecting) {
          var d = parseInt(e.target.getAttribute('data-delay') || '0', 10);
          setTimeout(function () { e.target.classList.add('is-visible'); }, d * 120);
          obs.unobserve(e.target);
        }
      });
    }, { threshold: 0.1 });
    els.forEach(function (el) { obs.observe(el); });
  });
</script>

{% schema %}
{
  "name": "Analysis Steps",
  "tag": "section",
  "class": "analysis-steps-section",
  "settings": [
    { "type": "textarea", "id": "heading", "label": "Heading", "default": "What Happens During Your Free Skin Analysis" },
    { "type": "textarea", "id": "subtitle", "label": "Subtitle", "default": "Feel confident in your skin and your decisions with a private, obligation-free consultation led by a skincare expert." },
    { "type": "text", "id": "footer_text", "label": "Footer Quote", "default": "We will never recommend treatments you don't need." },
    { "type": "header", "content": "Background & Texture" },
    { "type": "color", "id": "section_bg", "label": "Section Background", "default": "#ede6df" },
    { "type": "checkbox", "id": "show_texture", "label": "Show Paper Texture", "default": true },
    { "type": "range", "id": "texture_opacity", "label": "Texture Intensity", "min": 0, "max": 100, "step": 5, "default": 80, "unit": "%" },
    { "type": "header", "content": "Colors" },
    { "type": "color", "id": "heading_color", "label": "Heading Color", "default": "#3a3a3a" },
    { "type": "color", "id": "text_color", "label": "Text Color", "default": "#666666" },
    { "type": "color", "id": "number_bg", "label": "Number Circle BG", "default": "#d4a0a0" },
    { "type": "color", "id": "number_text", "label": "Number Circle Text", "default": "#ffffff" },
    { "type": "header", "content": "Typography" },
    { "type": "range", "id": "heading_font_size", "label": "Heading Font Size", "min": 28, "max": 56, "step": 2, "default": 40, "unit": "px" },
    { "type": "range", "id": "step_title_font_size", "label": "Step Title Font Size", "min": 16, "max": 30, "step": 1, "default": 22, "unit": "px" },
    { "type": "range", "id": "body_font_size", "label": "Body Font Size", "min": 14, "max": 20, "step": 1, "default": 16, "unit": "px" },
    { "type": "header", "content": "Layout" },
    { "type": "range", "id": "padding_top", "label": "Padding Top", "min": 0, "max": 120, "step": 4, "default": 72, "unit": "px" },
    { "type": "range", "id": "padding_bottom", "label": "Padding Bottom", "min": 0, "max": 120, "step": 4, "default": 72, "unit": "px" }
  ],
  "blocks": [
    {
      "type": "step",
      "name": "Step",
      "settings": [
        { "type": "text", "id": "title", "label": "Title", "default": "Professional Skin Assessment" },
        { "type": "textarea", "id": "description", "label": "Description", "default": "Your skin is examined using advanced UV technology to reveal underlying issues like sun damage, pigmentation, and other concerns." }
      ]
    },
    {
      "type": "image",
      "name": "Side Image",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Image" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Analysis Steps",
      "blocks": [
        { "type": "step", "settings": { "title": "Professional Skin Assessment", "description": "Your skin is examined using advanced UV technology to reveal underlying issues like sun damage, pigmentation, and other concerns." } },
        { "type": "step", "settings": { "title": "Discussion of Concerns & Goals", "description": "Together, we discuss your skin concerns, goals, and lifestyle to understand what your skin truly needs." } },
        { "type": "step", "settings": { "title": "Personalised Treatment Plan", "description": "Based on your assessment, you'll receive a tailored skincare treatment plan designed specifically for your skin type and concerns." } },
        { "type": "step", "settings": { "title": "Clear Guidance, No Obligation", "description": "You'll get straightforward advice and have plenty of time to ask questions. There's absolutely no obligation to book any treatment." } },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" }
      ]
    }
  ]
}
{% endschema %}
