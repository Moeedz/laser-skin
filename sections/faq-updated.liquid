{% comment %}
  FAQ Section - Dark Theme
  - Dark background with light text
  - Gold underline under questions
  - Circular + icon
  - All items expanded by default option
  - Fully customizable
{% endcomment %}

<style>
  #faq-section-{{ section.id }} {
    background-color: {{ section.settings.section_bg_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  #faq-section-{{ section.id }} .faq-container {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 {{ section.settings.side_padding }}px;
  }

  #faq-section-{{ section.id }} .faq-heading {
    text-align: {{ section.settings.heading_alignment }};
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.heading_font_size }}px;
    margin-bottom: {{ section.settings.heading_margin_bottom }}px;
    font-weight: {{ section.settings.heading_font_weight }};
    font-style: {{ section.settings.heading_font_style }};
    line-height: 1.2;
  }

  #faq-section-{{ section.id }} .faq-item {
    border-bottom: 1px solid {{ section.settings.divider_color }};
    padding: {{ section.settings.item_padding_vertical }}px 0;
  }

  #faq-section-{{ section.id }} .faq-item:first-child {
    border-top: 1px solid {{ section.settings.divider_color }};
  }

  #faq-section-{{ section.id }} .faq-question {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    cursor: pointer;
    gap: 20px;
  }

  #faq-section-{{ section.id }} .faq-question-content {
    flex: 1;
  }

  #faq-section-{{ section.id }} .faq-question-text {
    color: {{ section.settings.question_color }};
    font-size: {{ section.settings.question_font_size }}px;
    font-weight: {{ section.settings.question_font_weight }};
    margin: 0 0 8px 0;
    line-height: 1.4;
  }

  #faq-section-{{ section.id }} .faq-question-underline {
    width: {{ section.settings.underline_width }}px;
    height: {{ section.settings.underline_height }}px;
    background-color: {{ section.settings.underline_color }};
    border-radius: {{ section.settings.underline_height }}px;
  }

  #faq-section-{{ section.id }} .faq-icon {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    min-width: {{ section.settings.icon_size }}px;
    border: {{ section.settings.icon_border_width }}px solid {{ section.settings.icon_color }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    margin-top: 4px;
  }

  #faq-section-{{ section.id }} .faq-icon svg {
    width: {{ section.settings.icon_size | times: 0.5 }}px;
    height: {{ section.settings.icon_size | times: 0.5 }}px;
    stroke: {{ section.settings.icon_color }};
    stroke-width: 2;
    transition: transform 0.3s ease;
  }

  #faq-section-{{ section.id }} .faq-item.active .faq-icon {
    background-color: {{ section.settings.icon_active_bg }};
    border-color: {{ section.settings.icon_active_color }};
  }

  #faq-section-{{ section.id }} .faq-item.active .faq-icon svg {
    stroke: {{ section.settings.icon_active_color }};
    transform: rotate(45deg);
  }

  #faq-section-{{ section.id }} .faq-answer {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.4s ease, margin 0.3s ease;
  }

  #faq-section-{{ section.id }} .faq-item.active .faq-answer {
    max-height: 500px;
    margin-top: {{ section.settings.answer_margin_top }}px;
  }

  #faq-section-{{ section.id }} .faq-answer-text {
    color: {{ section.settings.answer_color }};
    font-size: {{ section.settings.answer_font_size }}px;
    line-height: {{ section.settings.answer_line_height }};
    margin: 0;
    padding-right: 60px;
  }

  #faq-section-{{ section.id }} .faq-answer-text p {
    margin: 0 0 12px 0;
  }

  #faq-section-{{ section.id }} .faq-answer-text p:last-child {
    margin-bottom: 0;
  }

  /* Decorative element */
  #faq-section-{{ section.id }} .faq-decoration {
    text-align: right;
    margin-top: 30px;
    padding-right: 20px;
  }

  #faq-section-{{ section.id }} .faq-decoration svg {
    width: {{ section.settings.decoration_size }}px;
    height: {{ section.settings.decoration_size }}px;
    fill: {{ section.settings.decoration_color }};
    opacity: {{ section.settings.decoration_opacity }};
  }

  @media screen and (max-width: 749px) {
    #faq-section-{{ section.id }} .faq-heading {
      font-size: {{ section.settings.heading_font_size | times: 0.7 | round }}px;
    }

    #faq-section-{{ section.id }} .faq-question-text {
      font-size: {{ section.settings.question_font_size | times: 0.9 | round }}px;
    }

    #faq-section-{{ section.id }} .faq-answer-text {
      font-size: {{ section.settings.answer_font_size | times: 0.95 | round }}px;
      padding-right: 0;
    }

    #faq-section-{{ section.id }} .faq-icon {
      width: {{ section.settings.icon_size | times: 0.85 | round }}px;
      height: {{ section.settings.icon_size | times: 0.85 | round }}px;
      min-width: {{ section.settings.icon_size | times: 0.85 | round }}px;
    }
  }
</style>

<section id="faq-section-{{ section.id }}" class="faq-section">
  <div class="faq-container">
    {% if section.settings.heading != blank %}
      <h2 class="faq-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="faq-list">
      {% for block in section.blocks %}
        <div class="faq-item {% if section.settings.all_items_open or forloop.first and section.settings.first_item_open %}active{% endif %}" {{ block.shopify_attributes }}>
          <div class="faq-question" role="button" aria-expanded="{% if section.settings.all_items_open or forloop.first and section.settings.first_item_open %}true{% else %}false{% endif %}">
            <div class="faq-question-content">
              <h3 class="faq-question-text">{{ block.settings.question }}</h3>
              {% if section.settings.show_underline %}
                <div class="faq-question-underline"></div>
              {% endif %}
            </div>
            <div class="faq-icon">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 5v14M5 12h14" />
              </svg>
            </div>
          </div>
          <div class="faq-answer">
            <div class="faq-answer-text">{{ block.settings.answer }}</div>
          </div>
        </div>
      {% endfor %}
    </div>

    {% if section.settings.show_decoration %}
      <div class="faq-decoration">
        <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path d="M12 2L14.09 8.26L20.18 8.64L15.54 12.74L17.03 18.72L12 15.27L6.97 18.72L8.46 12.74L3.82 8.64L9.91 8.26L12 2Z"/>
          <path d="M12 6L13.09 9.26L16.18 9.44L13.54 11.74L14.29 14.86L12 13.27L9.71 14.86L10.46 11.74L7.82 9.44L10.91 9.26L12 6Z" fill-opacity="0.3"/>
        </svg>
      </div>
    {% endif %}
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const section = document.getElementById('faq-section-{{ section.id }}');
    const faqItems = section.querySelectorAll('.faq-item');
    const allowMultiple = {{ section.settings.allow_multiple_open }};

    faqItems.forEach(item => {
      const question = item.querySelector('.faq-question');
      
      question.addEventListener('click', function() {
        const isActive = item.classList.contains('active');
        
        if (!allowMultiple) {
          faqItems.forEach(otherItem => {
            if (otherItem !== item) {
              otherItem.classList.remove('active');
              otherItem.querySelector('.faq-question').setAttribute('aria-expanded', 'false');
            }
          });
        }
        
        item.classList.toggle('active');
        question.setAttribute('aria-expanded', !isActive);
      });
    });
  });
</script>

