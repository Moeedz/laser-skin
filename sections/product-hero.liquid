{% style %}
  /* ==========================================================================
     Product Hero Section
     ========================================================================== */

  .prh {
    --ease-out-expo: cubic-bezier(0.16, 1, 0.3, 1);
    width: 100%;
    overflow: hidden;
  }

  /* ---- Banner ---- */
  .prh__banner {
    position: relative;
    display: flex;
    align-items: center;
    height: var(--desktop-height);
    background-color: var(--hero-bg-color);
    overflow: hidden;
  }

  .prh__image-wrapper {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .prh__bg-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: var(--image-position);
  }

  .prh__overlay {
    position: absolute;
    inset: 0;
    z-index: 1;
    background: linear-gradient(
      to right,
      var(--overlay-color-start) 0%,
      var(--overlay-color-mid) 35%,
      var(--overlay-color-fade) 65%,
      transparent 100%
    );
  }

  /* ---- Container ---- */
  .prh__container {
    position: relative;
    z-index: 2;
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 50px;
  }

  .prh__content {
    max-width: var(--content-max-width, 580px);
  }

  /* ---- Heading ---- */
  .prh__heading {
    font-family: 'Georgia', 'Times New Roman', serif;
    font-size: var(--heading-size);
    font-weight: 700;
    font-style: italic;
    line-height: 1.15;
    color: var(--heading-color);
    margin: 0 0 6px;
    letter-spacing: -0.01em;
  }

  /* ---- Subheading ---- */
  .prh__subheading {
    font-family: 'Georgia', 'Times New Roman', serif;
    font-size: var(--subheading-size);
    font-weight: 700;
    line-height: 1.25;
    color: var(--heading-color);
    margin: 0 0 24px;
  }

  .prh__highlight {
    color: var(--highlight-color);
  }

  /* ---- Description ---- */
  .prh__description {
    font-size: var(--body-size);
    line-height: 1.7;
    color: var(--text-color);
    margin: 0 0 28px;
    max-width: 520px;
  }

  .prh__description p {
    margin: 0;
  }

  /* ---- Checklist ---- */
  .prh__checklist {
    list-style: none;
    margin: 0 0 32px;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 14px;
  }

  .prh__check-item {
    display: flex;
    align-items: center;
    gap: 14px;
  }

  .prh__check-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--check-color);
    flex-shrink: 0;
  }

  .prh__check-icon svg {
    width: 26px;
    height: 26px;
  }

  .prh__check-text {
    font-size: calc(var(--body-size) + 1px);
    font-weight: 500;
    color: var(--heading-color);
    line-height: 1.4;
  }

  /* ---- Button ---- */
  .prh__btn-wrapper {
    margin-top: 8px;
  }

  .prh__btn {
    display: inline-block;
    background: var(--btn-bg);
    color: var(--btn-text);
    font-size: 17px;
    font-weight: 500;
    letter-spacing: 0.02em;
    padding: 16px 38px;
    border-radius: 8px;
    text-decoration: none;
    transition: background 0.3s var(--ease-out-expo), transform 0.3s var(--ease-out-expo), box-shadow 0.3s ease;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
  }

  .prh__btn:hover {
    background: var(--btn-bg-hover);
    transform: translateY(-2px);
    box-shadow: 0 6px 24px rgba(0, 0, 0, 0.1);
    color: var(--btn-text);
  }

  .prh__btn:active {
    transform: translateY(0);
  }

  /* ==========================================================================
     Trust Bar
     ========================================================================== */
  .prh__trust-bar {
    background: var(--trust-bg);
    border-top: 1px solid rgba(0, 0, 0, 0.06);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }

  .prh__trust-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 22px 50px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 20px;
    flex-wrap: wrap;
  }

  .prh__trust-item {
    display: flex;
    align-items: center;
    gap: 14px;
    padding: 8px 0;
    position: relative;
  }

  .prh__trust-item:not(:last-child)::after {
    content: '';
    position: absolute;
    right: -20px;
    top: 50%;
    transform: translateY(-50%);
    width: 1px;
    height: 40px;
    background: rgba(0, 0, 0, 0.1);
  }

  .prh__trust-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--trust-icon-color);
    flex-shrink: 0;
  }

  .prh__trust-icon svg {
    width: 34px;
    height: 34px;
  }

  .prh__trust-icon .trust-custom-icon {
    width: 34px;
    height: 34px;
    object-fit: contain;
  }

  .prh__trust-text {
    display: flex;
    flex-direction: column;
    gap: 1px;
  }

  .prh__trust-title {
    font-size: 15px;
    font-weight: 700;
    color: var(--trust-text);
    line-height: 1.3;
  }

  .prh__trust-subtitle {
    font-size: 14px;
    font-weight: 500;
    color: var(--trust-text);
    opacity: 0.75;
    line-height: 1.3;
  }

  .prh__trust-stars {
    display: flex;
    gap: 2px;
    color: var(--trust-star-color);
    margin-top: 2px;
  }

  /* ==========================================================================
     Animations
     ========================================================================== */
  [data-prh-animate] {
    opacity: 0;
    transform: translateY(24px);
    transition: opacity 0.7s var(--ease-out-expo), transform 0.7s var(--ease-out-expo);
  }

  [data-prh-animate].is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* ==========================================================================
     Responsive — Tablet
     ========================================================================== */
  @media screen and (max-width: 1024px) {
    .prh__container {
      padding: 0 36px;
    }

    .prh__heading {
      font-size: calc(var(--heading-size) * 0.82);
    }

    .prh__subheading {
      font-size: calc(var(--subheading-size) * 0.82);
    }

    .prh__trust-container {
      gap: 16px;
      padding: 20px 30px;
    }

    .prh__trust-item:not(:last-child)::after {
      right: -12px;
    }
  }

  /* ---- Mobile Image (hidden on desktop) ---- */
  .prh__mobile-image {
    display: none;
  }

  .prh__mobile-content {
    display: none;
  }

  /* ==========================================================================
     Responsive — Mobile: stacked (image top, content below)
     ========================================================================== */
  @media screen and (max-width: 768px) {
    .prh__banner {
      display: none;
    }

    .prh__mobile-image {
      display: block;
      width: 100%;
      height: var(--mobile-height, 320px);
      overflow: hidden;
    }

    .prh__mobile-image .prh__mobile-img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: var(--image-position);
      display: block;
    }

    .prh__mobile-content {
      display: block;
      background-color: var(--hero-bg-color);
      padding: 32px 24px 40px;
    }

    .prh__mobile-content .prh__content {
      max-width: 100%;
    }

    .prh__mobile-content .prh__heading {
      font-size: calc(var(--heading-size) * 0.62);
    }

    .prh__mobile-content .prh__subheading {
      font-size: calc(var(--subheading-size) * 0.68);
      margin-bottom: 16px;
    }

    .prh__mobile-content .prh__description {
      max-width: 100%;
      margin-bottom: 20px;
      font-size: 15px;
    }

    .prh__mobile-content .prh__checklist {
      margin-bottom: 24px;
      gap: 10px;
    }

    .prh__mobile-content .prh__check-icon svg {
      width: 22px;
      height: 22px;
    }

    .prh__mobile-content .prh__check-text {
      font-size: 15px;
    }

    .prh__mobile-content .prh__btn {
      width: 100%;
      text-align: center;
      padding: 15px 28px;
    }

    .prh__trust-container {
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      gap: 12px 28px;
      padding: 16px 20px;
    }

    .prh__trust-item {
      gap: 10px;
      padding: 4px 0;
    }

    .prh__trust-item:not(:last-child)::after {
      right: -16px;
      height: 30px;
    }

    .prh__trust-icon svg {
      width: 26px;
      height: 26px;
    }

    .prh__trust-title {
      font-size: 13px;
    }

    .prh__trust-subtitle {
      font-size: 11px;
    }

    .prh__trust-stars svg {
      width: 11px;
      height: 11px;
    }
  }

  @media screen and (min-width: 769px) {
    .prh__mobile-image,
    .prh__mobile-content {
      display: none !important;
    }
  }

  /* ==========================================================================
     Responsive — Small Mobile
     ========================================================================== */
  @media screen and (max-width: 480px) {
    .prh__mobile-content {
      padding: 24px 18px 32px;
    }

    .prh__mobile-content .prh__heading {
      font-size: calc(var(--heading-size) * 0.52);
    }

    .prh__mobile-content .prh__subheading {
      font-size: calc(var(--subheading-size) * 0.56);
    }

    .prh__mobile-content .prh__description {
      font-size: 14px;
    }

    .prh__mobile-content .prh__check-text {
      font-size: 14px;
    }

    .prh__mobile-content .prh__btn {
      font-size: 15px;
      padding: 14px 24px;
    }

    .prh__trust-container {
      gap: 10px 20px;
      padding: 14px 16px;
    }

    .prh__trust-icon svg {
      width: 22px;
      height: 22px;
    }

    .prh__trust-title {
      font-size: 12px;
    }

    .prh__trust-subtitle {
      font-size: 10px;
    }
  }
{% endstyle %}

<section
  class="prh"
  id="prh-{{ section.id }}"
  style="
    --hero-bg-color: {{ section.settings.background_color }};
    --heading-color: {{ section.settings.heading_color }};
    --highlight-color: {{ section.settings.highlight_color }};
    --text-color: {{ section.settings.text_color }};
    --check-color: {{ section.settings.checkmark_color }};
    --btn-bg: {{ section.settings.button_bg }};
    --btn-text: {{ section.settings.button_text_color }};
    --btn-bg-hover: {{ section.settings.button_bg_hover }};
    --trust-bg: {{ section.settings.trust_bar_bg }};
    --trust-text: {{ section.settings.trust_bar_text_color }};
    --trust-icon-color: {{ section.settings.trust_icon_color }};
    --trust-star-color: {{ section.settings.trust_star_color }};
    --heading-size: {{ section.settings.heading_font_size }}px;
    --subheading-size: {{ section.settings.subheading_font_size }}px;
    --body-size: {{ section.settings.body_font_size }}px;
    --overlay-color-start: {{ section.settings.overlay_color_start }};
    --overlay-color-mid: {{ section.settings.overlay_color_mid }};
    --overlay-color-fade: {{ section.settings.overlay_color_fade }};
    --content-max-width: {{ section.settings.content_max_width }}px;
    --desktop-height: {{ section.settings.desktop_height }}px;
    --mobile-height: {{ section.settings.mobile_height }}px;
    --image-position: {{ section.settings.image_position }};
  "
>
  <!-- Hero Banner -->
  <div class="prh__banner">
    {% if section.settings.background_image != blank %}
      <div class="prh__image-wrapper">
        {{
          section.settings.background_image
          | image_url: width: 2000
          | image_tag: loading: 'lazy', class: 'prh__bg-image', widths: '600,800,1200,1600,2000'
        }}
      </div>
    {% endif %}
    <div class="prh__overlay"></div>

    <div class="prh__container page-width">
      <div class="prh__content">
        {% if section.settings.heading != blank %}
          <h2 class="prh__heading" data-prh-animate data-delay="0">{{ section.settings.heading }}</h2>
        {% endif %}

        {% if section.settings.subheading != blank %}
          <p class="prh__subheading" data-prh-animate data-delay="1">
            {% if section.settings.subheading_highlight != blank %}
              <span class="prh__highlight">{{ section.settings.subheading_highlight }}</span>
            {% endif %}
            {{ section.settings.subheading }}
          </p>
        {% endif %}

        {% if section.settings.description != blank %}
          <div class="prh__description" data-prh-animate data-delay="2">{{ section.settings.description }}</div>
        {% endif %}

        {% assign has_checks = false %}
        {% for block in section.blocks %}
          {% if block.type == 'check_item' %}{% assign has_checks = true %}{% break %}{% endif %}
        {% endfor %}

        {% if has_checks %}
          <ul class="prh__checklist" data-prh-animate data-delay="3">
            {% for block in section.blocks %}
              {% if block.type == 'check_item' %}
                <li class="prh__check-item" {{ block.shopify_attributes }}>
                  <span class="prh__check-icon">
                    {% case block.settings.icon %}
                      {% when 'shield_check' %}
                        <svg viewBox="0 0 26 26" fill="none"><path d="M13 2L3 6.5V12.5C3 18.3 7.5 23.7 13 25C18.5 23.7 23 18.3 23 12.5V6.5L13 2Z" stroke="currentColor" stroke-width="1.6" stroke-linejoin="round"/><path d="M8.5 13L11.5 16L17.5 10" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/></svg>
                      {% when 'checkmark' %}
                        <svg viewBox="0 0 26 26" fill="none"><path d="M5 13.5L10 18.5L21 7.5" stroke="currentColor" stroke-width="2.2" stroke-linecap="round" stroke-linejoin="round"/></svg>
                      {% when 'star' %}
                        <svg viewBox="0 0 26 26" fill="none"><path d="M13 2L15.8 8.6L23 9.4L17.7 14.2L19.2 21.3L13 17.8L6.8 21.3L8.3 14.2L3 9.4L10.2 8.6L13 2Z" stroke="currentColor" stroke-width="1.6" stroke-linejoin="round"/></svg>
                      {% when 'heart' %}
                        <svg viewBox="0 0 26 26" fill="none"><path d="M13 22S3 16 3 10C3 6.7 5.7 4 9 4C10.8 4 12.5 5 13 6C13.5 5 15.2 4 17 4C20.3 4 23 6.7 23 10C23 16 13 22 13 22Z" stroke="currentColor" stroke-width="1.6" stroke-linejoin="round"/></svg>
                      {% when 'sparkle' %}
                        <svg viewBox="0 0 26 26" fill="none"><path d="M13 2V24M2 13H24M5.5 5.5L20.5 20.5M20.5 5.5L5.5 20.5" stroke="currentColor" stroke-width="1.4" stroke-linecap="round"/><circle cx="13" cy="13" r="2" fill="currentColor"/></svg>
                    {% endcase %}
                  </span>
                  <span class="prh__check-text">{{ block.settings.text }}</span>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        {% endif %}

        {% if section.settings.button_label != blank %}
          <div class="prh__btn-wrapper" data-prh-animate data-delay="4">
            <a href="{{ section.settings.button_link }}" class="prh__btn" {% if section.settings.button_open_new_tab %}target="_blank" rel="noopener noreferrer"{% endif %}>
              {{ section.settings.button_label }}
            </a>
          </div>
        {% endif %}
      </div>
    </div>
  </div>

  <!-- ===== MOBILE: Stacked Layout (image top, content below) ===== -->
  <div class="prh__mobile-image">
    {% if section.settings.mobile_image != blank %}
      {{
        section.settings.mobile_image
        | image_url: width: 800
        | image_tag: loading: 'lazy', class: 'prh__mobile-img', widths: '400,600,800'
      }}
    {% elsif section.settings.background_image != blank %}
      {{
        section.settings.background_image
        | image_url: width: 800
        | image_tag: loading: 'lazy', class: 'prh__mobile-img', widths: '400,600,800'
      }}
    {% endif %}
  </div>

  <div class="prh__mobile-content">
    <div class="prh__content">
      {% if section.settings.heading != blank %}
        <h2 class="prh__heading" data-prh-animate data-delay="0">{{ section.settings.heading }}</h2>
      {% endif %}

      {% if section.settings.subheading != blank %}
        <p class="prh__subheading" data-prh-animate data-delay="1">
          {% if section.settings.subheading_highlight != blank %}
            <span class="prh__highlight">{{ section.settings.subheading_highlight }}</span>
          {% endif %}
          {{ section.settings.subheading }}
        </p>
      {% endif %}

      {% if section.settings.description != blank %}
        <div class="prh__description" data-prh-animate data-delay="2">{{ section.settings.description }}</div>
      {% endif %}

      {% if has_checks %}
        <ul class="prh__checklist" data-prh-animate data-delay="3">
          {% for block in section.blocks %}
            {% if block.type == 'check_item' %}
              <li class="prh__check-item" {{ block.shopify_attributes }}>
                <span class="prh__check-icon">
                  {% case block.settings.icon %}
                    {% when 'shield_check' %}
                      <svg viewBox="0 0 26 26" fill="none"><path d="M13 2L3 6.5V12.5C3 18.3 7.5 23.7 13 25C18.5 23.7 23 18.3 23 12.5V6.5L13 2Z" stroke="currentColor" stroke-width="1.6" stroke-linejoin="round"/><path d="M8.5 13L11.5 16L17.5 10" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/></svg>
                    {% when 'checkmark' %}
                      <svg viewBox="0 0 26 26" fill="none"><path d="M5 13.5L10 18.5L21 7.5" stroke="currentColor" stroke-width="2.2" stroke-linecap="round" stroke-linejoin="round"/></svg>
                    {% when 'star' %}
                      <svg viewBox="0 0 26 26" fill="none"><path d="M13 2L15.8 8.6L23 9.4L17.7 14.2L19.2 21.3L13 17.8L6.8 21.3L8.3 14.2L3 9.4L10.2 8.6L13 2Z" stroke="currentColor" stroke-width="1.6" stroke-linejoin="round"/></svg>
                    {% when 'heart' %}
                      <svg viewBox="0 0 26 26" fill="none"><path d="M13 22S3 16 3 10C3 6.7 5.7 4 9 4C10.8 4 12.5 5 13 6C13.5 5 15.2 4 17 4C20.3 4 23 6.7 23 10C23 16 13 22 13 22Z" stroke="currentColor" stroke-width="1.6" stroke-linejoin="round"/></svg>
                    {% when 'sparkle' %}
                      <svg viewBox="0 0 26 26" fill="none"><path d="M13 2V24M2 13H24M5.5 5.5L20.5 20.5M20.5 5.5L5.5 20.5" stroke="currentColor" stroke-width="1.4" stroke-linecap="round"/><circle cx="13" cy="13" r="2" fill="currentColor"/></svg>
                  {% endcase %}
                </span>
                <span class="prh__check-text">{{ block.settings.text }}</span>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      {% endif %}

      {% if section.settings.button_label != blank %}
        <div class="prh__btn-wrapper" data-prh-animate data-delay="4">
          <a href="{{ section.settings.button_link }}" class="prh__btn" {% if section.settings.button_open_new_tab %}target="_blank" rel="noopener noreferrer"{% endif %}>
            {{ section.settings.button_label }}
          </a>
        </div>
      {% endif %}
    </div>
  </div>

  <!-- Trust Bar -->
  {% assign has_trust = false %}
  {% for block in section.blocks %}
    {% if block.type == 'trust_item' %}{% assign has_trust = true %}{% break %}{% endif %}
  {% endfor %}

  {% if has_trust %}
    <div class="prh__trust-bar">
      <div class="prh__trust-container page-width">
        {% for block in section.blocks %}
          {% if block.type == 'trust_item' %}
            <div class="prh__trust-item" {{ block.shopify_attributes }} data-prh-animate data-delay="{{ forloop.index }}">
              <div class="prh__trust-icon">
                {% if block.settings.custom_icon != blank %}
                  {{ block.settings.custom_icon | image_url: width: 80 | image_tag: loading: 'lazy', class: 'trust-custom-icon' }}
                {% else %}
                  {% case block.settings.icon %}
                    {% when 'star' %}
                      <svg viewBox="0 0 34 34" fill="none"><path d="M17 3L20.8 10.7L29 11.8L23 17.6L24.5 25.7L17 21.7L9.5 25.7L11 17.6L5 11.8L13.2 10.7L17 3Z" stroke="currentColor" stroke-width="1.8" stroke-linejoin="round"/></svg>
                    {% when 'medical' %}
                      <svg viewBox="0 0 34 34" fill="none"><rect x="4" y="6" width="26" height="22" rx="3" stroke="currentColor" stroke-width="1.8"/><rect x="8" y="10" width="18" height="3" rx="1" fill="currentColor" opacity="0.2"/><path d="M13 18H21M17 14V22" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/></svg>
                    {% when 'calendar' %}
                      <svg viewBox="0 0 34 34" fill="none"><rect x="4" y="6" width="26" height="24" rx="3" stroke="currentColor" stroke-width="1.8"/><path d="M4 13H30" stroke="currentColor" stroke-width="1.8"/><path d="M11 3V8" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/><path d="M23 3V8" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/><path d="M13 20L16 23L22 17" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/></svg>
                    {% when 'finance' %}
                      <svg viewBox="0 0 34 34" fill="none"><circle cx="17" cy="17" r="12" stroke="currentColor" stroke-width="1.8"/><text x="17" y="22" text-anchor="middle" fill="currentColor" font-size="14" font-weight="600" font-family="serif">£</text></svg>
                  {% endcase %}
                {% endif %}
              </div>
              <div class="prh__trust-text">
                {% if block.settings.title != blank %}
                  <span class="prh__trust-title">{{ block.settings.title }}</span>
                {% endif %}
                {% if block.settings.subtitle != blank %}
                  <span class="prh__trust-subtitle">{{ block.settings.subtitle }}</span>
                {% endif %}
                {% if block.settings.show_stars %}
                  <div class="prh__trust-stars">
                    {% for i in (1..5) %}
                      <svg width="14" height="14" viewBox="0 0 14 14" fill="currentColor"><path d="M7 1L8.59 4.22L12.1 4.73L9.55 7.22L10.18 10.72L7 9.04L3.82 10.72L4.45 7.22L1.9 4.73L5.41 4.22L7 1Z"/></svg>
                    {% endfor %}
                  </div>
                {% endif %}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  {% endif %}
</section>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const section = document.getElementById('prh-{{ section.id }}');
    if (!section) return;
    const els = section.querySelectorAll('[data-prh-animate]');
    if (!els.length) return;
    const obs = new IntersectionObserver((entries) => {
      entries.forEach((e) => {
        if (e.isIntersecting) {
          const d = parseInt(e.target.getAttribute('data-delay') || '0', 10);
          setTimeout(() => e.target.classList.add('is-visible'), d * 120);
          obs.unobserve(e.target);
        }
      });
    }, { threshold: 0.15 });
