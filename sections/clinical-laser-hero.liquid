{
  "name": "Clinical Laser Hero",
  "tag": "section",
  "class": "clinical-hero-section",
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image Focus Point",
      "options": [
        { "value": "center center", "label": "Center" },
        { "value": "center top", "label": "Top" },
        { "value": "center bottom", "label": "Bottom" },
        { "value": "left center", "label": "Left" },
        { "value": "right center", "label": "Right" },
        { "value": "left top", "label": "Top Left" },
        { "value": "right top", "label": "Top Right" },
        { "value": "right bottom", "label": "Bottom Right" }
      ],
      "default": "center center"
    },
    {
      "type": "header",
      "content": "Section Height"
    },
    {
      "type": "range",
      "id": "desktop_height",
      "label": "Desktop Section Height",
      "min": 350,
      "max": 900,
      "step": 10,
      "default": 600,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "mobile_image_height",
      "label": "Mobile Image Height",
      "min": 200,
      "max": 500,
      "step": 10,
      "default": 320,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Overlay"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f5ede3"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay Opacity (%)",
      "min": 0,
      "max": 80,
      "step": 5,
      "default": 15,
      "unit": "%"
    },
    {
      "type": "header",
      "content": "Heading"
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading",
      "default": "Stop guessing how many sessions you need."
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "label": "Heading Font Size (desktop)",
      "min": 28,
      "max": 72,
      "step": 2,
      "default": 48,
      "unit": "px"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#3a3a3a"
    },
    {
      "type": "header",
      "content": "Subheading"
    },
    {
      "type": "text",
      "id": "subheading_prefix",
      "label": "Subheading Prefix",
      "default": "Start with"
