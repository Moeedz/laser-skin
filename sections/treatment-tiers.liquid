    { "type": "color", "id": "section_bg", "label": "Section Background", "default": "#e5dfda" },
    { "type": "checkbox", "id": "show_texture", "label": "Show Paper Texture", "default": true },
    { "type": "range", "id": "texture_opacity", "label": "Texture Intensity", "min": 0, "max": 100, "step": 5, "default": 80, "unit": "%" },
    { "type": "header", "content": "Colors" },
    { "type": "color", "id": "heading_color", "label": "Heading Color", "default": "#2a2a2a" },
    { "type": "color", "id": "text_color", "label": "Text Color", "default": "#555555" },
    { "type": "color", "id": "accent_color", "label": "Accent / Downtime Color", "default": "#b08d57" },
    { "type": "color", "id": "card_bg", "label": "Card Background", "default": "#efebe6" },
    { "type": "color", "id": "card_border", "label": "Card Border", "default": "#ddd8d0" },
    { "type": "header", "content": "Typography" },
    { "type": "range", "id": "heading_font_size", "label": "Heading Font Size", "min": 28, "max": 56, "step": 2, "default": 40, "unit": "px" },
    { "type": "range", "id": "card_title_font_size", "label": "Card Title Font Size", "min": 18, "max": 30, "step": 1, "default": 22, "unit": "px" },
    { "type": "range", "id": "body_font_size", "label": "Body Font Size", "min": 14, "max": 20, "step": 1, "default": 16, "unit": "px" },
    { "type": "header", "content": "Layout" },
    { "type": "range", "id": "padding_top", "label": "Padding Top", "min": 0, "max": 120, "step": 4, "default": 72, "unit": "px" },
    { "type": "range", "id": "padding_bottom", "label": "Padding Bottom", "min": 0, "max": 120, "step": 4, "default": 72, "unit": "px" }
  ],
  "blocks": [
    {
      "type": "tier",
      "name": "Tier Card",
      "settings": [
        { "type": "text", "id": "title", "label": "Title", "default": "Light Resurfacing" },
        { "type": "text", "id": "best_for", "label": "Best for...", "default": "early texture, pores, dullness" },
        { "type": "text", "id": "downtime", "label": "Downtime", "default": "2–3 days" },
        { "type": "richtext", "id": "description", "label": "Description", "default": "<p>Gentle treatment surface-level concerns with minimal downtime.</p><p>Ideal for sun damage, open pores, and overall dullness.</p>" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Treatment Tiers",
      "blocks": [
        { "type": "tier", "settings": { "title": "Light Resurfacing", "best_for": "early texture, pores, dullness", "downtime": "2–3 days", "description": "<p>Gentle treatment surface-level concerns with minimal downtime.</p><p>Ideal for sun damage, open pores, and overall dullness.</p>" } },
        { "type": "tier", "settings": { "title": "Moderate Resurfacing", "best_for": "fine lines, acne scarring", "downtime": "5–7 days", "description": "<p>Balanced treatment for deeper texture and scarring.</p><p>Good for fine lines, mild acne scars, and crepey skin.</p>" } },
        { "type": "tier", "settings": { "title": "Deep Resurfacing", "best_for": "deeper scars and wrinkles", "downtime": "7–10+ days", "description": "<p>Intensive treatment targeting significant skin damage.</p><p>Best for deep rolling scars, surgical scars, and deep wrinkles.</p>" } }
      ]
    }
  ]
}
