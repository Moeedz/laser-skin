{% style %}
  .tit {
    --ease-out-expo: cubic-bezier(0.16, 1, 0.3, 1);
    width: 100%; overflow: hidden; position: relative;
    background-color: var(--section-bg);
    padding: var(--padding-top) 0 var(--padding-bottom);
  }

  .tit__texture {
    position: absolute; inset: 0; pointer-events: none; z-index: 0;
    opacity: var(--texture-opacity);
  }
  .tit__texture::before, .tit__texture::after { content: ''; position: absolute; inset: 0; }
  .tit__texture::before {
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.85' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)' opacity='0.04'/%3E%3C/svg%3E");
    background-size: 200px 200px;
  }
  .tit__texture::after {
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 512 512' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='f'%3E%3CfeTurbulence type='turbulence' baseFrequency='0.02 0.08' numOctaves='3' seed='2' stitchTiles='stitch'/%3E%3CfeColorMatrix type='saturate' values='0'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23f)' opacity='0.035'/%3E%3C/svg%3E");
    background-size: 512px 512px;
  }

  .tit__container {
    position: relative; z-index: 1;
    max-width: 1100px; margin: 0 auto; padding: 0 40px;
  }

  /* Heading */
  .tit__heading {
    font-family: 'Georgia', 'Times New Roman', serif;
    font-size: var(--heading-size); font-weight: 400; font-style: italic;
    line-height: 1.2; color: var(--heading-color);
    text-align: center; margin: 0 0 20px;
  }

  /* Body text */
  .tit__body {
    font-size: var(--body-size); line-height: 1.7;
    color: var(--text-color); margin: 0 0 28px;
  }

  .tit__body p { margin: 0 0 12px; }
  .tit__body p:last-child { margin-bottom: 0; }

  /* Image */
  .tit__image {
    margin: 0 auto 28px;
    max-width: var(--image-max-width);
    border-radius: 8px; overflow: hidden;
  }

  .tit__image img {
    width: 100%; height: auto; display: block;
    object-fit: cover;
  }

  /* Sub-heading */
  .tit__subheading {
    font-family: 'Georgia', 'Times New Roman', serif;
    font-size: calc(var(--body-size) + 4px); font-weight: 700;
    color: var(--heading-color); margin: 0 0 14px; line-height: 1.3;
  }

  /* Bullet points */
  .tit__points {
    display: flex; flex-direction: column; gap: 12px;
  }

  .tit__point {
    display: flex; align-items: flex-start; gap: 10px;
    font-size: var(--body-size); line-height: 1.55; color: var(--text-color);
  }

  .tit__point-bullet {
    flex-shrink: 0; margin-top: 8px;
    width: 6px; height: 6px; border-radius: 50%;
    background: var(--heading-color);
  }

  .tit__point-check {
    flex-shrink: 0; color: var(--accent-color); margin-top: 2px;
  }

  .tit__point-check svg { width: 18px; height: 18px; }

  /* Footer */
  .tit__footer {
    text-align: center; margin-top: 32px;
  }

  .tit__footer-text {
    font-family: 'Georgia', 'Times New Roman', serif;
    font-size: var(--body-size); font-style: italic;
    color: var(--heading-color); margin: 0; line-height: 1.6;
  }

  /* Animations */
  [data-tit-animate] {
    opacity: 0; transform: translateY(24px);
    transition: opacity 0.7s var(--ease-out-expo), transform 0.7s var(--ease-out-expo);
  }
  [data-tit-animate].is-visible { opacity: 1; transform: translateY(0); }

  /* Responsive */
  @media screen and (max-width: 768px) {
    .tit__container { padding: 0 20px; }
    .tit__heading { font-size: calc(var(--heading-size) * 0.65); }
  }

  @media screen and (max-width: 480px) {
    .tit__container { padding: 0 16px; }
    .tit__heading { font-size: calc(var(--heading-size) * 0.52); }
  }
{% endstyle %}

{% assign point_blocks = section.blocks | where: 'type', 'point' %}

<section
  class="tit"
  id="tit-{{ section.id }}"
  style="
    --section-bg: {{ section.settings.section_bg }};
    --heading-color: {{ section.settings.heading_color }};
    --text-color: {{ section.settings.text_color }};
    --accent-color: {{ section.settings.accent_color }};
    --heading-size: {{ section.settings.heading_font_size }}px;
    --body-size: {{ section.settings.body_font_size }}px;
    --image-max-width: {{ section.settings.image_max_width }}px;
    --texture-opacity: {{ section.settings.texture_opacity | divided_by: 100.0 }};
    --padding-top: {{ section.settings.padding_top }}px;
    --padding-bottom: {{ section.settings.padding_bottom }}px;
  "
>
  {% if section.settings.show_texture %}<div class="tit__texture"></div>{% endif %}

  <div class="tit__container">
    {% if section.settings.heading != blank %}
      <h2 class="tit__heading" data-tit-animate data-delay="0">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.body != blank %}
      <div class="tit__body" data-tit-animate data-delay="1">{{ section.settings.body }}</div>
    {% endif %}

    {% if section.settings.image != blank %}
      <div class="tit__image" data-tit-animate data-delay="2">
        {{ section.settings.image | image_url: width: 1200 | image_tag: loading: 'lazy', widths: '600,800,1000,1200' }}
      </div>
    {% endif %}

    {% if section.settings.sub_heading != blank or point_blocks.size > 0 %}
      <div data-tit-animate data-delay="3">
        {% if section.settings.sub_heading != blank %}
          <h3 class="tit__subheading">{{ section.settings.sub_heading }}</h3>
        {% endif %}

        {% if point_blocks.size > 0 %}
          <div class="tit__points">
            {% for block in point_blocks %}
              <div class="tit__point" {{ block.shopify_attributes }}>
                {% if section.settings.bullet_style == 'dot' %}
                  <span class="tit__point-bullet"></span>
                {% else %}
                  <span class="tit__point-check">
                    <svg viewBox="0 0 18 18" fill="none"><path d="M3 9.5L7 13.5L15 5.5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
                  </span>
                {% endif %}
                <span>{{ block.settings.text }}</span>
              </div>
            {% endfor %}
          </div>
        {% endif %}
      </div>
    {% endif %}

    {% if section.settings.footer_text != blank %}
      <div class="tit__footer" data-tit-animate data-delay="4">
        <p class="tit__footer-text">{{ section.settings.footer_text }}</p>
      </div>
    {% endif %}
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var s = document.getElementById('tit-{{ section.id }}');
    if (!s) return;
    var els = s.querySelectorAll('[data-tit-animate]');
    var obs = new IntersectionObserver(function (entries) {
      entries.forEach(function (e) {
        if (e.isIntersecting) {
          var d = parseInt(e.target.getAttribute('data-delay') || '0', 10);
          setTimeout(function () { e.target.classList.add('is-visible'); }, d * 120);
          obs.unobserve(e.target);
        }
      });
    }, { threshold: 0.1 });
    els.forEach(function (el) { obs.observe(el); });
  });
</script>

{% schema %}
{
  "name": "Text Image Text",
  "tag": "section",
  "class": "text-image-text-section",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "What Is Acne Therapy?" },
    { "type": "richtext", "id": "body", "label": "Body Text", "default": "<p>Acne therapy focuses on treating the underlying causes of breakouts rather than just surface symptoms. By addressing factors such as excess oil production, inflammation, blocked pores, and acne-causing bacteria, treatments are designed to restore skin balance and support long-term clarity. Depending on acne type, severity, and skin condition, different treatment approaches may be used to achieve the best outcome.</p>" },
    { "type": "image_picker", "id": "image", "label": "Image" },
    { "type": "text", "id": "sub_heading", "label": "Sub-heading", "default": "Why patients choose acne therapy" },
    { "type": "textarea", "id": "footer_text", "label": "Footer Text" },
    { "type": "select", "id": "bullet_style", "label": "Bullet Style", "default": "dot", "options": [
      { "value": "dot", "label": "Plain dot" },
      { "value": "check", "label": "Checkmark" }
    ] },
    { "type": "header", "content": "Background & Texture" },
    { "type": "color", "id": "section_bg", "label": "Section Background", "default": "#e4ddd6" },
    { "type": "checkbox", "id": "show_texture", "label": "Show Paper Texture", "default": true },
    { "type": "range", "id": "texture_opacity", "label": "Texture Intensity", "min": 0, "max": 100, "step": 5, "default": 80, "unit": "%" },
    { "type": "header", "content": "Colors" },
    { "type": "color", "id": "heading_color", "label": "Heading Color", "default": "#3a2820" },
    { "type": "color", "id": "text_color", "label": "Text Color", "default": "#4a3a30" },
    { "type": "color", "id": "accent_color", "label": "Checkmark Color", "default": "#b8886a" },
    { "type": "header", "content": "Typography" },
    { "type": "range", "id": "heading_font_size", "label": "Heading Font Size", "min": 28, "max": 56, "step": 2, "default": 38, "unit": "px" },
    { "type": "range", "id": "body_font_size", "label": "Body Font Size", "min": 14, "max": 20, "step": 1, "default": 16, "unit": "px" },
    { "type": "header", "content": "Layout" },
    { "type": "range", "id": "image_max_width", "label": "Image Max Width", "min": 400, "max": 1100, "step": 50, "default": 800, "unit": "px" },
    { "type": "range", "id": "padding_top", "label": "Padding Top", "min": 0, "max": 120, "step": 4, "default": 60, "unit": "px" },
    { "type": "range", "id": "padding_bottom", "label": "Padding Bottom", "min": 0, "max": 120, "step": 4, "default": 60, "unit": "px" }
  ],
  "blocks": [
    {
      "type": "point",
      "name": "Bullet Point",
      "settings": [
        { "type": "text", "id": "text", "label": "Text", "default": "Targets acne at its root causes" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Text Image Text",
      "blocks": [
        { "type": "point", "settings": { "text": "Targets acne at its root causes" } },
        { "type": "point", "settings": { "text": "Helps calm inflammation and active breakouts" } },
        { "type": "point", "settings": { "text": "Supports clearer, healthier skin over time" } }
      ]
    }
  ]
}
{% endschema %}
