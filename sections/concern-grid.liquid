    { "type": "color", "id": "overlay_fade", "label": "Overlay Fade (right)", "default": "#ddd0c440" },
    { "type": "range", "id": "shimmer_opacity", "label": "Shimmer Intensity", "min": 0, "max": 100, "step": 5, "default": 60, "unit": "%" },
    { "type": "header", "content": "Colors" },
    { "type": "color", "id": "heading_color", "label": "Heading Color", "default": "#3a2820" },
    { "type": "color", "id": "text_color", "label": "Text Color", "default": "#5a4a3a" },
    { "type": "color", "id": "icon_color", "label": "Icon Color", "default": "#8a7050" },
    { "type": "color", "id": "card_bg", "label": "Card Background", "default": "#ece5ddc0" },
    { "type": "header", "content": "Typography" },
    { "type": "range", "id": "heading_font_size", "label": "Heading Font Size", "min": 28, "max": 56, "step": 2, "default": 42, "unit": "px" },
    { "type": "range", "id": "card_title_font_size", "label": "Card Title Font Size", "min": 16, "max": 28, "step": 1, "default": 20, "unit": "px" },
    { "type": "range", "id": "body_font_size", "label": "Body Font Size", "min": 14, "max": 20, "step": 1, "default": 16, "unit": "px" },
    { "type": "header", "content": "Layout" },
    { "type": "range", "id": "padding_top", "label": "Padding Top", "min": 0, "max": 120, "step": 4, "default": 60, "unit": "px" },
    { "type": "range", "id": "padding_bottom", "label": "Padding Bottom", "min": 0, "max": 120, "step": 4, "default": 60, "unit": "px" }
  ],
  "blocks": [
    {
      "type": "concern",
      "name": "Concern Card",
      "settings": [
        { "type": "image_picker", "id": "icon_image", "label": "Icon Image" },
        { "type": "text", "id": "title", "label": "Title", "default": "Dull, dehydrated skin" },
        { "type": "text", "id": "subtitle", "label": "Subtitle", "default": "Restores deep hydration" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Concern Grid",
      "blocks": [
        { "type": "concern", "settings": { "title": "Dull, dehydrated skin", "subtitle": "Restores deep hydration" } },
        { "type": "concern", "settings": { "title": "Fine lines & wrinkles", "subtitle": "Smooths & refines texture" } },
        { "type": "concern", "settings": { "title": "Loss of elasticity", "subtitle": "Boosts skin firmness" } },
        { "type": "concern", "settings": { "title": "Under-eye area", "subtitle": "Brightens & thickens skin" } },
        { "type": "concern", "settings": { "title": "Crepey skin", "subtitle": "Improves skin density" } },
        { "type": "concern", "settings": { "title": "Post-procedure skin repair", "subtitle": "Supports healing & recovery" } }
      ]
    }
  ]
}
{% endschema %}
