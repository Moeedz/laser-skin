    { "type": "select", "id": "connector_style", "label": "Connector Style", "default": "line", "options": [
      { "value": "line", "label": "Line with dots" },
      { "value": "arrows", "label": "Chevron arrows" }
    ] },
    { "type": "header", "content": "Background & Texture" },
    { "type": "color", "id": "section_bg", "label": "Section Background", "default": "#e4dbd4" },
    { "type": "checkbox", "id": "show_texture", "label": "Show Paper Texture", "default": true },
    { "type": "range", "id": "texture_opacity", "label": "Texture Intensity", "min": 0, "max": 100, "step": 5, "default": 80, "unit": "%" },
    { "type": "header", "content": "Colors" },
    { "type": "color", "id": "heading_color", "label": "Heading Color", "default": "#3a2820" },
    { "type": "color", "id": "text_color", "label": "Text Color", "default": "#5a4a3a" },
    { "type": "color", "id": "line_color", "label": "Timeline Line Color", "default": "#baa898" },
    { "type": "color", "id": "dot_color", "label": "Dot Color", "default": "#baa898" },
    { "type": "color", "id": "circle_border", "label": "Circle Border Color", "default": "#ece5dd" },
    { "type": "header", "content": "Typography" },
    { "type": "range", "id": "heading_font_size", "label": "Heading Font Size", "min": 28, "max": 56, "step": 2, "default": 40, "unit": "px" },
    { "type": "range", "id": "title_font_size", "label": "Step Title Font Size", "min": 16, "max": 28, "step": 1, "default": 20, "unit": "px" },
    { "type": "range", "id": "body_font_size", "label": "Body Font Size", "min": 14, "max": 20, "step": 1, "default": 16, "unit": "px" },
    { "type": "header", "content": "Layout" },
    { "type": "range", "id": "circle_size", "label": "Circle Size", "min": 100, "max": 220, "step": 10, "default": 160, "unit": "px" },
    { "type": "range", "id": "padding_top", "label": "Padding Top", "min": 0, "max": 120, "step": 4, "default": 60, "unit": "px" },
    { "type": "range", "id": "padding_bottom", "label": "Padding Bottom", "min": 0, "max": 120, "step": 4, "default": 60, "unit": "px" }
  ],
  "blocks": [
    {
      "type": "step",
      "name": "Timeline Step",
      "settings": [
        { "type": "text", "id": "title", "label": "Title", "default": "Immediately after" },
        { "type": "image_picker", "id": "image", "label": "Circle Image" },
        { "type": "textarea", "id": "description", "label": "Description", "default": "Skin feels hydrated and refreshed" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Timeline Circles",
      "blocks": [
        { "type": "step", "settings": { "title": "Immediately after", "description": "Skin feels hydrated and refreshed" } },
        { "type": "step", "settings": { "title": "Days 3–7", "description": "Initial improvements in texture and brightness" } },
        { "type": "step", "settings": { "title": "Weeks 2–4", "description": "Increased fibroblast activity as NCTF® nourishes the skin's cellular environment" } },
        { "type": "step", "settings": { "title": "Weeks 6–12", "description": "Skin appears firmer, collagen-rich, and radiant" } }
      ]
    }
  ]
}
{% endschema %}