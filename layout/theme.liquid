<script>
  // Global functions for consultation modal
  window.openGlobalConsultation = function() {
    const modal = document.getElementById('global-consultation-modal');
    if (modal) {
      modal.classList.add('active');
      document.body.style.overflow = 'hidden';
    }
  };

  window.closeGlobalConsultation = function() {
    const modal = document.getElementById('global-consultation-modal');
    if (modal) {
      modal.classList.remove('active');
      document.body.style.overflow = '';
    }
  };

  // Close modal when clicking outside
  document.addEventListener('click', function(e) {
    const modal = document.getElementById('global-consultation-modal');
    if (e.target === modal) {
      closeGlobalConsultation();
    }
  });

  // Close modal on ESC key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
      closeGlobalConsultation();
    }
  });

  // Initialize ALL header buttons (both desktop and mobile)
  document.addEventListener('DOMContentLoaded', function() {
    const headerBtns = document.querySelectorAll('.header-contact-trigger'); // Changed to querySelectorAll
    
    headerBtns.forEach(function(btn) {
      btn.addEventListener('click', function(e) {
        e.preventDefault();
        openGlobalConsultation();
      });
    });
  });
</script>
