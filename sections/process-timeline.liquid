    { "type": "text", "id": "footer_text", "label": "Footer Text", "default": "Results develop gradually and look natural." },
    { "type": "header", "content": "Background & Texture" },
    { "type": "color", "id": "section_bg", "label": "Section Background", "default": "#ede4dc" },
    { "type": "checkbox", "id": "show_texture", "label": "Show Paper Texture", "default": true },
    { "type": "range", "id": "texture_opacity", "label": "Texture Intensity", "min": 0, "max": 100, "step": 5, "default": 80, "unit": "%" },
    { "type": "header", "content": "Colors" },
    { "type": "color", "id": "heading_color", "label": "Heading Color", "default": "#3a2820" },
    { "type": "color", "id": "text_color", "label": "Text Color", "default": "#5a4a3a" },
    { "type": "color", "id": "accent_color", "label": "Checkmark Color", "default": "#b8886a" },
    { "type": "color", "id": "line_color", "label": "Timeline Line Color", "default": "#baa898" },
    { "type": "color", "id": "dot_color", "label": "Dot Color", "default": "#baa898" },
    { "type": "header", "content": "Body Card" },
    { "type": "checkbox", "id": "show_body_card", "label": "Show Body Card Border", "default": false },
    { "type": "color", "id": "card_bg", "label": "Card Background", "default": "#f5efe9" },
    { "type": "color", "id": "card_border", "label": "Card Border Color", "default": "#d8cfc5" },
    { "type": "header", "content": "Typography" },
    { "type": "range", "id": "heading_font_size", "label": "Heading Font Size", "min": 28, "max": 56, "step": 2, "default": 38, "unit": "px" },
    { "type": "range", "id": "body_font_size", "label": "Body Font Size", "min": 14, "max": 20, "step": 1, "default": 16, "unit": "px" },
    { "type": "header", "content": "Layout" },
    { "type": "range", "id": "padding_top", "label": "Padding Top", "min": 0, "max": 120, "step": 4, "default": 60, "unit": "px" },
    { "type": "range", "id": "padding_bottom", "label": "Padding Bottom", "min": 0, "max": 120, "step": 4, "default": 60, "unit": "px" }
  ],
  "blocks": [
    {
      "type": "stage",
      "name": "Timeline Stage",
      "settings": [
        { "type": "text", "id": "title", "label": "Title", "default": "Immediately after treatment" },
        { "type": "textarea", "id": "points", "label": "Bullet Points (separate with ||)", "default": "Skin may feel warm or slightly flushed||Mild tightening sensation" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Process Timeline",
      "blocks": [
        { "type": "stage", "settings": { "title": "Immediately after treatment", "points": "Skin may feel warm or slightly flushed||Mild tightening sensation" } },
        { "type": "stage", "settings": { "title": "Weeks 1–4", "points": "Collagen production increases||Skin texture and firmness begin to improve" } },
        { "type": "stage", "settings": { "title": "Weeks 6–12", "points": "Continued collagen remodelling||Noticeable improvement in skin tightness and tone" } }
      ]
    }
  ]
}
{% endschema %}