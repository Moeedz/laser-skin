      "settings": [
        { "type": "image_picker", "id": "image", "label": "Circle Image" },
        { "type": "text", "id": "title", "label": "Title", "default": "Face" },
        { "type": "textarea", "id": "description", "label": "Description", "default": "Sun damage, age spots, redness, broken capillaries" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Icon Circles Grid",
      "blocks": [
        { "type": "item", "settings": { "title": "Face", "description": "Sun damage, age spots, redness, broken capillaries" } },
        { "type": "item", "settings": { "title": "Neck", "description": "Redness, age spots, fine lines" } },
        { "type": "item", "settings": { "title": "Chest", "description": "Sun damage, redness, broken capillaries" } },
        { "type": "item", "settings": { "title": "Hands", "description": "Sun damage, age spots, freckles" } },
        { "type": "item", "settings": { "title": "Legs", "description": "Unwanted hair, visible veins, sun damage" } },
        { "type": "item", "settings": { "title": "Unwanted Hair", "description": "Reducing hair growth on face & body" } }
      ]
    }
  ]
}
