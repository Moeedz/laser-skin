      <script>
        document.addEventListener('DOMContentLoaded', function() {
          const slideshowForm = document.querySelector('.slideshow-form');
          if (!slideshowForm) return;
          
          // Handle pill button groups
          const pillGroups = slideshowForm.querySelectorAll('.pill-group');
          
          pillGroups.forEach(group => {
            const isSingleSelect = group.dataset.singleSelect === 'true';
            const groupType = group.dataset.pillGroup;
            const buttons = group.querySelectorAll('.pill-button');
            
            // Find corresponding hidden input
            let hiddenInput;
            if (groupType === 'slideshow-time') {
              hiddenInput = document.getElementById('slideshow-time-preference');
            } else if (groupType === 'slideshow-contact-method') {
              hiddenInput = document.getElementById('slideshow-contact-method');
            }
            
            buttons.forEach(button => {
              button.addEventListener('click', function(e) {
                e.preventDefault();
                
                if (isSingleSelect) {
                  // Single select - deselect all others
                  buttons.forEach(btn => btn.classList.remove('selected'));
                  this.classList.add('selected');
                  
                  if (hiddenInput) {
                    hiddenInput.value = this.dataset.value;
                  }
                } else {
                  // Multi-select - toggle this button
                  this.classList.toggle('selected');
                  
                  // Gather all selected values
                  const selectedValues = [];
                  buttons.forEach(btn => {
                    if (btn.classList.contains('selected')) {
                      selectedValues.push(btn.dataset.value);
                    }
                  });
                  
                  if (hiddenInput) {
                    hiddenInput.value = selectedValues.join(', ');
                  }
                }
              });
            });
          });

          // Form validation
          const form = slideshowForm.querySelector('.consultation-form');
          if (form) {
            form.addEventListener('submit', function(e) {
              let isValid = true;
              
              // Check time preference if required
              const timeInput = document.getElementById('slideshow-time-preference');
              if (timeInput && timeInput.hasAttribute('required') && !timeInput.value) {
                isValid = false;
                const timeGroup = slideshowForm.querySelector('[data-pill-group="slideshow-time"]');
                if (timeGroup) {
                  timeGroup.style.outline = '2px solid #dc3545';
                  timeGroup.style.outlineOffset = '4px';
                  timeGroup.style.borderRadius = '8px';
                }
              }
              
              // Check contact method if required
              const contactInput = document.getElementById('slideshow-contact-method');
              if (contactInput && contactInput.hasAttribute('required') && !contactInput.value) {
                isValid = false;
                const contactGroup = slideshowForm.querySelector('[data-pill-group="slideshow-contact-method"]');
                if (contactGroup) {
                  contactGroup.style.outline = '2px solid #dc3545';
                  contactGroup.style.outlineOffset = '4px';
                  contactGroup.style.borderRadius = '8px';
                }
              }
              
              if (!isValid) {
                e.preventDefault();
                alert('Please select all required options.');
              }
            });
          }

          // Clear validation styling when pills are selected
          slideshowForm.querySelectorAll('.pill-button').forEach(btn => {
            btn.addEventListener('click', function() {
              const group = this.closest('.pill-group');
              if (group) {
                group.style.outline = 'none';
              }
            });
          });
        });
      </script>
    {%- endif -%}
