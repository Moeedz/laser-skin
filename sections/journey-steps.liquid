        { "type": "step", "settings": { "title": "REJUVENATION", "description": "LED Light Therapy stimulates collagen & reduces redness." } },
        { "type": "step", "settings": { "title": "PROTECTION", "description": "SPF and skin barrier protection applied to finish." } }
      ]
    }
