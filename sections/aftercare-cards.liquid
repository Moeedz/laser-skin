{% style %}
  .afc {
    --ease-out-expo: cubic-bezier(0.16, 1, 0.3, 1);
    width: 100%; overflow: hidden; position: relative;
    background-color: var(--section-bg);
    padding: var(--padding-top) 0 var(--padding-bottom);
  }

  .afc__texture {
    position: absolute; inset: 0; pointer-events: none; z-index: 0;
    opacity: var(--texture-opacity);
  }
  .afc__texture::before, .afc__texture::after { content: ''; position: absolute; inset: 0; }
  .afc__texture::before {
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.85' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)' opacity='0.04'/%3E%3C/svg%3E");
    background-size: 200px 200px;
  }
  .afc__texture::after {
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 512 512' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='f'%3E%3CfeTurbulence type='turbulence' baseFrequency='0.02 0.08' numOctaves='3' seed='2' stitchTiles='stitch'/%3E%3CfeColorMatrix type='saturate' values='0'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23f)' opacity='0.035'/%3E%3C/svg%3E");
    background-size: 512px 512px;
  }

  .afc__container {
    position: relative; z-index: 1;
    max-width: 1100px; margin: 0 auto; padding: 0 40px;
  }

  /* Header */
  .afc__header { text-align: center; margin-bottom: 36px; }

  .afc__heading {
    font-family: 'Georgia', 'Times New Roman', serif;
    font-size: var(--heading-size); font-weight: 400; font-style: italic;
    line-height: 1.2; color: var(--heading-color); margin: 0 0 14px;
  }

  .afc__subtitle {
    font-size: var(--body-size); font-style: italic;
    line-height: 1.6; color: var(--text-color); margin: 0;
    max-width: 650px; margin-left: auto; margin-right: auto;
  }

  /* Cards grid */
  .afc__cards {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 28px;
    margin-bottom: 36px;
  }

  .afc__card {
    background: var(--card-bg);
    border: 1px solid var(--card-border);
    border-radius: 12px;
    padding: 32px 28px;
  }

  /* Card heading */
  .afc__card-heading {
    font-family: 'Georgia', 'Times New Roman', serif;
    font-size: calc(var(--body-size) + 6px); font-weight: 700;
    color: var(--heading-color); margin: 0 0 16px;
    text-align: center; line-height: 1.3;
  }

  /* Icon with line */
  .afc__card-icon-row {
    display: flex; align-items: center; gap: 12px;
    margin-bottom: 24px;
  }

  .afc__card-icon-line {
    flex: 1; height: 1px;
    background: var(--card-border);
  }

  .afc__card-icon {
    flex-shrink: 0;
    width: 40px; height: 40px;
    display: flex; align-items: center; justify-content: center;
  }

  .afc__card-icon img {
    width: 36px; height: 36px; object-fit: contain;
  }

  /* Fallback icon style */
  .afc__card-icon svg {
    width: 32px; height: 32px; color: var(--accent-color); opacity: 0.7;
  }

  /* Points */
  .afc__card-points {
    display: flex; flex-direction: column; gap: 14px;
  }

  .afc__card-point {
    display: flex; align-items: flex-start; gap: 10px;
    font-size: var(--body-size); line-height: 1.55; color: var(--text-color);
  }

  .afc__card-check {
    flex-shrink: 0; color: var(--accent-color); margin-top: 2px;
  }

  .afc__card-check svg { width: 18px; height: 18px; }

  .afc__card-point span p { margin: 0; }

  /* Footer */
  .afc__footer { text-align: center; }

  .afc__footer-text {
    font-family: 'Georgia', 'Times New Roman', serif;
    font-size: var(--body-size); font-style: italic;
    color: var(--heading-color); margin: 0;
    line-height: 1.6;
  }

  /* Animations */
  [data-afc-animate] {
    opacity: 0; transform: translateY(24px);
    transition: opacity 0.7s var(--ease-out-expo), transform 0.7s var(--ease-out-expo);
  }
  [data-afc-animate].is-visible { opacity: 1; transform: translateY(0); }

  /* Responsive */
  @media screen and (max-width: 768px) {
    .afc__container { padding: 0 20px; }
    .afc__heading { font-size: calc(var(--heading-size) * 0.65); }
    .afc__cards { grid-template-columns: 1fr; gap: 20px; }
    .afc__card { padding: 24px 20px; }
  }

  @media screen and (max-width: 480px) {
    .afc__container { padding: 0 16px; }
    .afc__heading { font-size: calc(var(--heading-size) * 0.52); }
    .afc__card { padding: 20px 16px; }
    .afc__card-heading { font-size: calc(var(--body-size) + 3px); }
  }
{% endstyle %}

{% assign card_blocks = section.blocks | where: 'type', 'card' %}

<section
  class="afc"
  id="afc-{{ section.id }}"
  style="
    --section-bg: {{ section.settings.section_bg }};
    --heading-color: {{ section.settings.heading_color }};
    --text-color: {{ section.settings.text_color }};
    --accent-color: {{ section.settings.accent_color }};
    --card-bg: {{ section.settings.card_bg }};
    --card-border: {{ section.settings.card_border }};
    --heading-size: {{ section.settings.heading_font_size }}px;
    --body-size: {{ section.settings.body_font_size }}px;
    --texture-opacity: {{ section.settings.texture_opacity | divided_by: 100.0 }};
    --padding-top: {{ section.settings.padding_top }}px;
    --padding-bottom: {{ section.settings.padding_bottom }}px;
  "
>
  {% if section.settings.show_texture %}<div class="afc__texture"></div>{% endif %}

  <div class="afc__container">
    {% if section.settings.heading != blank or section.settings.subtitle != blank %}
      <div class="afc__header" data-afc-animate data-delay="0">
        {% if section.settings.heading != blank %}
          <h2 class="afc__heading">{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.subtitle != blank %}
          <p class="afc__subtitle">{{ section.settings.subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% if card_blocks.size > 0 %}
      <div class="afc__cards" data-afc-animate data-delay="1">
        {% for block in card_blocks %}
          <div class="afc__card" {{ block.shopify_attributes }}>
            {% if block.settings.card_heading != blank %}
              <h3 class="afc__card-heading">{{ block.settings.card_heading }}</h3>
            {% endif %}

            <div class="afc__card-icon-row">
              <div class="afc__card-icon-line"></div>
              {% if block.settings.icon != blank %}
                <div class="afc__card-icon">
                  {{ block.settings.icon | image_url: width: 72 | image_tag: loading: 'lazy' }}
                </div>
              {% endif %}
              <div class="afc__card-icon-line"></div>
            </div>

            {% assign points = block.settings.points | split: '||' %}
            {% if points.size > 0 %}
              <div class="afc__card-points">
                {% for point in points %}
                  {% assign trimmed = point | strip %}
                  {% if trimmed != blank %}
                    <div class="afc__card-point">
                      <span class="afc__card-check">
                        <svg viewBox="0 0 18 18" fill="none"><path d="M3 9.5L7 13.5L15 5.5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
                      </span>
                      <span>{{ trimmed }}</span>
                    </div>
                  {% endif %}
                {% endfor %}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endif %}

    {% if section.settings.footer_text != blank %}
      <div class="afc__footer" data-afc-animate data-delay="2">
        <p class="afc__footer-text">{{ section.settings.footer_text }}</p>
      </div>
    {% endif %}
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var s = document.getElementById('afc-{{ section.id }}');
    if (!s) return;
    var els = s.querySelectorAll('[data-afc-animate]');
    var obs = new IntersectionObserver(function (entries) {
      entries.forEach(function (e) {
        if (e.isIntersecting) {
          var d = parseInt(e.target.getAttribute('data-delay') || '0', 10);
          setTimeout(function () { e.target.classList.add('is-visible'); }, d * 150);
          obs.unobserve(e.target);
        }
      });
    }, { threshold: 0.1 });
    els.forEach(function (el) { obs.observe(el); });
  });
</script>

{% schema %}
{
  "name": "Aftercare Cards",
  "tag": "section",
  "class": "aftercare-cards-section",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "IPL Aftercare & Downtime" },
    { "type": "textarea", "id": "subtitle", "label": "Subtitle", "default": "To ensure safe, natural-looking results, patients should follow these key aftercare steps." },
    { "type": "textarea", "id": "footer_text", "label": "Footer Text", "default": "Downtime is typically minimal. Full healing and clearer skin develop over 1–2 weeks." },
    { "type": "header", "content": "Background & Texture" },
    { "type": "color", "id": "section_bg", "label": "Section Background", "default": "#ede4dc" },
    { "type": "checkbox", "id": "show_texture", "label": "Show Paper Texture", "default": true },
    { "type": "range", "id": "texture_opacity", "label": "Texture Intensity", "min": 0, "max": 100, "step": 5, "default": 80, "unit": "%" },
    { "type": "header", "content": "Colors" },
    { "type": "color", "id": "heading_color", "label": "Heading Color", "default": "#3a2820" },
    { "type": "color", "id": "text_color", "label": "Text Color", "default": "#4a3a30" },
    { "type": "color", "id": "accent_color", "label": "Checkmark Color", "default": "#b8886a" },
    { "type": "color", "id": "card_bg", "label": "Card Background", "default": "#f5efe9" },
    { "type": "color", "id": "card_border", "label": "Card Border Color", "default": "#d8cfc5" },
    { "type": "header", "content": "Typography" },
    { "type": "range", "id": "heading_font_size", "label": "Heading Font Size", "min": 28, "max": 56, "step": 2, "default": 38, "unit": "px" },
    { "type": "range", "id": "body_font_size", "label": "Body Font Size", "min": 14, "max": 20, "step": 1, "default": 16, "unit": "px" },
    { "type": "header", "content": "Layout" },
    { "type": "range", "id": "padding_top", "label": "Padding Top", "min": 0, "max": 120, "step": 4, "default": 60, "unit": "px" },
    { "type": "range", "id": "padding_bottom", "label": "Padding Bottom", "min": 0, "max": 120, "step": 4, "default": 60, "unit": "px" }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Card",
      "settings": [
        { "type": "text", "id": "card_heading", "label": "Card Heading", "default": "Aftercare Tips" },
        { "type": "image_picker", "id": "icon", "label": "Icon Image" },
        { "type": "textarea", "id": "points", "label": "Bullet Points (separate with ||)", "default": "Apply gentle sunscreen daily, SPF 30+||Avoid retinoids & exfoliating products for 3–5 days||Avoid strenuous exercise, saunas, & hot tubs for 24–48 hours||Keep skin hydrated and don't pick or scratch at treated areas" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Aftercare Cards",
      "blocks": [
        { "type": "card", "settings": { "card_heading": "Aftercare Tips", "points": "Apply gentle sunscreen daily, SPF 30+||Avoid retinoids & exfoliating products for 3–5 days||Avoid strenuous exercise, saunas, & hot tubs for 24–48 hours||Keep skin hydrated and don't pick or scratch at treated areas" } },
        { "type": "card", "settings": { "card_heading": "Expected Downtime", "points": "Mild redness and darkening of pigment||Any swelling is typically mild and short-lived||Within 3–7 days, treated areas will flake or fade||Makeup may be worn if skin isn't irritated; apply gently" } }
      ]
    }
  ]
}
{% endschema %}
