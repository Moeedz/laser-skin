{% doc %}
  @prompt
    make me an image box for a mobile photo please
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-mobile-image-box-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    max-width: 100%;
  }

  .ai-mobile-image-box__container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    box-shadow: {{ block.settings.shadow_intensity }}px {{ block.settings.shadow_intensity | times: 2 }}px {{ block.settings.shadow_intensity | times: 3 }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity }});
  }

  .ai-mobile-image-box__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.aspect_ratio }};
    overflow: hidden;
  }

  .ai-mobile-image-box__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: {{ block.settings.image_fit }};
    display: block;
  }

  .ai-mobile-image-box__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-mobile-image-box__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
  }

  .ai-mobile-image-box__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px 16px;
    font-size: 12px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-mobile-image-box__content-{{ ai_gen_id }} {
    padding: {{ block.settings.content_padding }}px;
  }

  .ai-mobile-image-box__title-{{ ai_gen_id }} {
    margin: 0 0 8px;
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
  }

  .ai-mobile-image-box__description-{{ ai_gen_id }} {
    margin: 0;
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.description_size }}px;
    line-height: 1.5;
  }

  @media screen and (min-width: 750px) {
    .ai-mobile-image-box-{{ ai_gen_id }} {
      width: {{ block.settings.desktop_width_percent }}%;
    }
  }
{% endstyle %}

<mobile-image-box-{{ ai_gen_id }}
  class="ai-mobile-image-box-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-mobile-image-box__container-{{ ai_gen_id }}">
    <div class="ai-mobile-image-box__image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.image %}
        <img
          src="{{ block.settings.image | image_url: width: 1000 }}"
          alt="{{ block.settings.image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.height }}"
          class="ai-mobile-image-box__image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-mobile-image-box__placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
          <div class="ai-mobile-image-box__empty-state-{{ ai_gen_id }}">
            Add a mobile photo
          </div>
        </div>
      {% endif %}
    </div>

    {% if block.settings.show_content %}
      <div class="ai-mobile-image-box__content-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h3 class="ai-mobile-image-box__title-{{ ai_gen_id }}">{{ block.settings.title }}</h3>
        {% endif %}

        {% if block.settings.description != blank %}
          <div class="ai-mobile-image-box__description-{{ ai_gen_id }}">
            {{ block.settings.description }}
          </div>
        {% endif %}
      </div>
    {% endif %}
  </div>
</mobile-image-box-{{ ai_gen_id }}>

<script>
  (function() {
    class MobileImageBox{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
      }
    }

    customElements.define('mobile-image-box-{{ ai_gen_id }}', MobileImageBox{{ ai_gen_id }});
  })();
</script>

{% schema %}
{
  "name": "Mobile image box",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "aspect_ratio",
      "label": "Aspect ratio",
      "options": [
        {
          "value": "9/16",
          "label": "Portrait (9:16)"
        },
        {
          "value": "3/4",
          "label": "Portrait (3:4)"
        },
        {
          "value": "1/1",
          "label": "Square (1:1)"
        },
        {
          "value": "4/3",
          "label": "Landscape (4:3)"
        },
        {
          "value": "16/9",
          "label": "Landscape (16:9)"
        }
      ],
      "default": "9/16"
    },
    {
      "type": "select",
      "id": "image_fit",
      "label": "Image fit",
      "options": [
        {
          "value": "cover",
          "label": "Cover"
        },
        {
          "value": "contain",
          "label": "Contain"
        }
      ],
      "default": "cover"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "checkbox",
      "id": "show_content",
      "label": "Show content",
      "default": true
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Mobile photo"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Add a description for your mobile photo"
    },
    {
      "type": "range",
      "id": "title_size",
      "min": 12,
      "max": 32,
      "step": 2,
      "unit": "px",
      "label": "Title size",
      "default": 18
    },
    {
      "type": "range",
      "id": "description_size",
      "min": 10,
      "max": 24,
      "step": 2,
      "unit": "px",
      "label": "Description size",
      "default": 14
    },
    {
      "type": "range",
      "id": "content_padding",
      "min": 0,
      "max": 40,
      "step": 4,
      "unit": "px",
      "label": "Content padding",
      "default": 16
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#1c1c1c"
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 40,
      "step": 4,
      "unit": "px",
      "label": "Border radius",
      "default": 12
    },
    {
      "type": "range",
      "id": "shadow_intensity",
      "min": 0,
      "max": 10,
      "step": 1,
      "unit": "px",
      "label": "Shadow intensity",
      "default": 2
    },
    {
      "type": "range",
      "id": "shadow_opacity",
      "min": 0,
      "max": 0.5,
      "step": 0.1,
      "label": "Shadow opacity",
      "default": 0.1
    },
    {
      "type": "range",
      "id": "desktop_width_percent",
      "label": "Desktop width",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 100
    }
  ],
  "presets": [
    {
      "name": "Mobile image box"
    }
  ]
}
{% endschema %}
