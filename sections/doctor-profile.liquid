    { "type": "richtext", "id": "bio_text", "label": "Bio Text", "default": "<p>All anti-wrinkle injections at Laser Skin Clinics are performed exclusively by <strong>Dr Scotton</strong>, an NHS Consultant with advanced aesthetic training.</p><p>Every treatment is guided by <strong>medical assessment</strong>, <strong>anatomical precision</strong>, and a commitment to preserving natural expression. The aim is not to change how you look, but to help your skin appear smoother, more relaxed, and well-rested.</p>" },
    { "type": "textarea", "id": "footer_bio", "label": "Footer Bio Paragraph", "default": "Dr Scotton has completed advanced aesthetic training through the Royal Society of Medicine, and is experienced in wrinkle-relaxing treatments for both cosmetic and medical indications, including migraine and hyperhidrosis." },
    { "type": "text", "id": "closing_text", "label": "Closing Statement", "default": "This is medical aesthetics performed with restraint, experience, and intention." },
    { "type": "header", "content": "Background & Texture" },
    { "type": "color", "id": "section_bg", "label": "Section Background", "default": "#e4ddd6" },
    { "type": "checkbox", "id": "show_texture", "label": "Show Paper Texture", "default": true },
    { "type": "range", "id": "texture_opacity", "label": "Texture Intensity", "min": 0, "max": 100, "step": 5, "default": 80, "unit": "%" },
    { "type": "header", "content": "Colors" },
    { "type": "color", "id": "heading_color", "label": "Heading Color", "default": "#2a2a2a" },
    { "type": "color", "id": "text_color", "label": "Text Color", "default": "#4a4a4a" },
    { "type": "color", "id": "accent_color", "label": "Checkmark Color", "default": "#b09a60" },
    { "type": "color", "id": "card_bg", "label": "Photo Card BG", "default": "#f5f0eb" },
    { "type": "color", "id": "card_border", "label": "Photo Card Border", "default": "#ddd8d0" },
    { "type": "header", "content": "Typography" },
    { "type": "range", "id": "heading_font_size", "label": "Heading Font Size", "min": 28, "max": 56, "step": 2, "default": 40, "unit": "px" },
    { "type": "range", "id": "body_font_size", "label": "Body Font Size", "min": 14, "max": 20, "step": 1, "default": 16, "unit": "px" },
    { "type": "header", "content": "Layout" },
    { "type": "range", "id": "padding_top", "label": "Padding Top", "min": 0, "max": 120, "step": 4, "default": 60, "unit": "px" },
    { "type": "range", "id": "padding_bottom", "label": "Padding Bottom", "min": 0, "max": 120, "step": 4, "default": 60, "unit": "px" }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        { "type": "text", "id": "title", "label": "Title", "default": "Safety-led approach" },
        { "type": "textarea", "id": "description", "label": "Description", "default": "Every treatment is planned conservatively, prioritising long term skin health and facial balance." }
      ]
    }
  ],
  "presets": [
    {
      "name": "Doctor Profile",
      "blocks": [
        { "type": "feature", "settings": { "title": "Safety-led approach", "description": "Every treatment is planned conservatively, prioritising long term skin health and facial balance." } },
        { "type": "feature", "settings": { "title": "Clinically precise dosing", "description": "Muscle groups, depth, and placement are carefully selected for subtle, predictable outcomes." } },
        { "type": "feature", "settings": { "title": "Medical environment", "description": "All treatments are delivered in a clinical setting, following strict medical protocols." } }
      ]
    }
  ]
}
