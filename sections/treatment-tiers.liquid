{% style %}
  .ttr {
    --ease-out-expo: cubic-bezier(0.16, 1, 0.3, 1);
    width: 100%; overflow: hidden; position: relative;
    background-color: var(--section-bg);
    padding: var(--padding-top) 0 var(--padding-bottom);
  }

  .ttr__texture {
    position: absolute; inset: 0; pointer-events: none; z-index: 0;
    opacity: var(--texture-opacity);
  }
  .ttr__texture::before, .ttr__texture::after { content: ''; position: absolute; inset: 0; }
  .ttr__texture::before {
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.85' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)' opacity='0.04'/%3E%3C/svg%3E");
    background-size: 200px 200px;
  }
  .ttr__texture::after {
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 512 512' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='f'%3E%3CfeTurbulence type='turbulence' baseFrequency='0.02 0.08' numOctaves='3' seed='2' stitchTiles='stitch'/%3E%3CfeColorMatrix type='saturate' values='0'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23f)' opacity='0.035'/%3E%3C/svg%3E");
    background-size: 512px 512px;
  }

  .ttr__container {
    position: relative; z-index: 1;
    max-width: 1140px; margin: 0 auto; padding: 0 40px;
  }

  /* Header */
  .ttr__header { text-align: center; margin-bottom: 36px; }

  .ttr__heading {
    font-family: 'Georgia', 'Times New Roman', serif;
    font-size: var(--heading-size); font-weight: 400; font-style: italic;
    line-height: 1.2; color: var(--heading-color); margin: 0 0 16px;
  }

  .ttr__ornament {
    text-align: center; margin-bottom: 16px;
    color: var(--accent-color); opacity: 0.5; line-height: 1;
  }
  .ttr__ornament::before {
    content: ''; display: inline-block; width: 60px; height: 1px;
    background: var(--accent-color); vertical-align: middle; margin-right: 10px; opacity: 0.5;
  }
  .ttr__ornament::after {
    content: ''; display: inline-block; width: 60px; height: 1px;
    background: var(--accent-color); vertical-align: middle; margin-left: 10px; opacity: 0.5;
  }

  .ttr__subtitle {
    font-size: var(--body-size); line-height: 1.6;
    color: var(--text-color); margin: 0 0 12px;
  }

  .ttr__secondary {
    font-size: var(--body-size); line-height: 1.6;
    color: var(--heading-color); margin: 0; font-weight: 500;
  }

  /* Cards */
  .ttr__cards {
    display: grid;
    grid-template-columns: repeat(var(--col-count, 3), 1fr);
    gap: 24px;
    margin-bottom: 40px;
  }

  .ttr__card {
    background: var(--card-bg);
    border: 1px solid var(--card-border);
    border-radius: 12px;
    padding: 0;
    overflow: hidden;
    transition: transform 0.3s var(--ease-out-expo), box-shadow 0.3s ease;
  }

  .ttr__card:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.05);
  }

  /* Card title header area */
  .ttr__card-header {
    padding: 20px 24px;
    border-bottom: 1px solid var(--card-border);
    text-align: center;
  }

  .ttr__card-title {
    font-family: 'Georgia', 'Times New Roman', serif;
    font-size: var(--card-title-size); font-weight: 600;
    color: var(--heading-color); margin: 0; line-height: 1.3;
  }

  /* Card body */
  .ttr__card-body { padding: 20px 24px 24px; }

  .ttr__card-best {
    font-size: var(--body-size); line-height: 1.5;
    color: var(--text-color); margin: 0 0 10px;
  }

  .ttr__card-best strong { color: var(--heading-color); }

  .ttr__card-downtime {
    font-size: var(--body-size); line-height: 1.5;
    margin: 0 0 14px; font-weight: 700;
    color: var(--accent-color);
  }

  .ttr__card-desc {
    font-size: calc(var(--body-size) - 1px); line-height: 1.6;
    color: var(--text-color); margin: 0;
  }

  .ttr__card-desc p { margin: 0 0 8px; }
  .ttr__card-desc p:last-child { margin-bottom: 0; }

  /* Footer */
  .ttr__footer { text-align: center; }

  .ttr__footer-text {
    font-family: 'Georgia', 'Times New Roman', serif;
    font-size: calc(var(--body-size) + 1px); font-style: italic;
    color: var(--heading-color); margin: 0; line-height: 1.5;
  }

  /* Animations */
  [data-ttr-animate] {
    opacity: 0; transform: translateY(24px);
    transition: opacity 0.7s var(--ease-out-expo), transform 0.7s var(--ease-out-expo);
  }
  [data-ttr-animate].is-visible { opacity: 1; transform: translateY(0); }

  /* Responsive */
  @media screen and (max-width: 768px) {
    .ttr__container { padding: 0 20px; }
    .ttr__heading { font-size: calc(var(--heading-size) * 0.62); }
    .ttr__cards { grid-template-columns: 1fr; gap: 16px; max-width: 420px; margin-left: auto; margin-right: auto; }
  }
  @media screen and (max-width: 480px) {
    .ttr__container { padding: 0 16px; }
    .ttr__heading { font-size: calc(var(--heading-size) * 0.52); }
  }
{% endstyle %}

{% assign card_blocks = section.blocks | where: 'type', 'tier' %}

<section
  class="ttr"
  id="ttr-{{ section.id }}"
  style="
    --section-bg: {{ section.settings.section_bg }};
    --heading-color: {{ section.settings.heading_color }};
    --text-color: {{ section.settings.text_color }};
    --accent-color: {{ section.settings.accent_color }};
    --card-bg: {{ section.settings.card_bg }};
    --card-border: {{ section.settings.card_border }};
    --heading-size: {{ section.settings.heading_font_size }}px;
    --card-title-size: {{ section.settings.card_title_font_size }}px;
    --body-size: {{ section.settings.body_font_size }}px;
    --texture-opacity: {{ section.settings.texture_opacity | divided_by: 100.0 }};
    --padding-top: {{ section.settings.padding_top }}px;
    --padding-bottom: {{ section.settings.padding_bottom }}px;
    --col-count: {{ card_blocks.size }};
  "
>
  {% if section.settings.show_texture %}<div class="ttr__texture"></div>{% endif %}

  <div class="ttr__container">
    <div class="ttr__header" data-ttr-animate data-delay="0">
      {% if section.settings.heading != blank %}
        <h2 class="ttr__heading">{{ section.settings.heading }}</h2>
      {% endif %}
      <div class="ttr__ornament">◆</div>
      {% if section.settings.subtitle != blank %}
        <p class="ttr__subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}
      {% if section.settings.secondary_text != blank %}
        <p class="ttr__secondary">{{ section.settings.secondary_text }}</p>
      {% endif %}
    </div>

    {% if card_blocks.size > 0 %}
      <div class="ttr__cards" data-ttr-animate data-delay="1">
        {% for block in card_blocks %}
          <div class="ttr__card" {{ block.shopify_attributes }}>
            <div class="ttr__card-header">
              {% if block.settings.title != blank %}
                <h3 class="ttr__card-title">{{ block.settings.title }}</h3>
              {% endif %}
            </div>
            <div class="ttr__card-body">
              {% if block.settings.best_for != blank %}
                <p class="ttr__card-best"><strong>Best for</strong> {{ block.settings.best_for }}</p>
              {% endif %}
              {% if block.settings.downtime != blank %}
                <p class="ttr__card-downtime">Downtime: {{ block.settings.downtime }}</p>
              {% endif %}
              {% if block.settings.description != blank %}
                <div class="ttr__card-desc">{{ block.settings.description }}</div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}

    {% if section.settings.footer_text != blank %}
      <div class="ttr__footer" data-ttr-animate data-delay="2">
        <p class="ttr__footer-text">{{ section.settings.footer_text }}</p>
      </div>
    {% endif %}
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var s = document.getElementById('ttr-{{ section.id }}');
    if (!s) return;
    var els = s.querySelectorAll('[data-ttr-animate]');
    var obs = new IntersectionObserver(function (entries) {
      entries.forEach(function (e) {
        if (e.isIntersecting) {
          var d = parseInt(e.target.getAttribute('data-delay') || '0', 10);
          setTimeout(function () { e.target.classList.add('is-visible'); }, d * 150);
          obs.unobserve(e.target);
        }
      });
    }, { threshold: 0.1 });
    els.forEach(function (el) { obs.observe(el); });
  });
</script>

{% schema %}
{
  "name": "Treatment Tiers",
  "tag": "section",
  "class": "treatment-tiers-section",
  "settings": [
    { "type": "richtext", "id": "heading", "label": "Heading", "default": "<p>Personalised CO₂ laser resurfacing — tailored to your skin.</p>" },
    { "type": "text", "id": "subtitle", "label": "Subtitle", "default": "We adjust treatment depth to match your goals, skin condition, and downtime preferences." },
    { "type": "text", "id": "secondary_text", "label": "Secondary Text", "default": "Choose the depth of treatment that best suits your needs:" },
