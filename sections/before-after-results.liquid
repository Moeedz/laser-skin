        { "type": "image_picker", "id": "after_image", "label": "After Image" },
        { "type": "text", "id": "session_info", "label": "Session Info", "default": "1 session · Minimal downtime" },
        { "type": "textarea", "id": "benefit", "label": "Benefit Text", "default": "Targets sun damage, open pores, and dullness" }
