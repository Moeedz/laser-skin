                  </a>
                {% endif %}
              </div>
            {% endif %}
          </div>
        {% endif %}

        <!-- Opening Hours Section - Full Width -->
        {% if section.settings.show_opening_hours %}
          <div class="contact-info-section-{{ section.id }} full-width">
            <h3 class="contact-info-section-title-{{ section.id }}">{{ section.settings.opening_hours_title }}</h3>
            <ul class="opening-hours-list-{{ section.id }}">
              {% for block in section.blocks %}
                {% if block.type == 'opening_hour' %}
                  <li class="opening-hours-item-{{ section.id }}" {{ block.shopify_attributes }}>
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <circle cx="12" cy="12" r="10"></circle>
                      <polyline points="12 6 12 12 16 14"></polyline>
                    </svg>
                    <span class="opening-hours-day-{{ section.id }}">{{ block.settings.day }}:</span>
                    <span>{{ block.settings.hours }}</span>
                  </li>
                {% endif %}
              {% endfor %}
            </ul>
          </div>
        {% endif %}
      </div>
    </div>

    <!-- Right Column: Contact Form -->
    <div class="contact-form-wrapper-{{ section.id }}">
      <h3 class="contact-form-heading-{{ section.id }}">{{ section.settings.form_heading }}</h3>
      
      <div class="contact-form-{{ section.id }}">
        {%- form 'contact' -%}
          {%- if form.posted_successfully? -%}
            <div class="form-message success">
              {{ section.settings.success_message | default: 'Thank you for contacting us. We will get back to you soon!' }}
            </div>
          {%- endif -%}

          {%- if form.errors -%}
            <div class="form-message error">
              {{ form.errors.translated_fields[form.errors.first] | capitalize }} {{ form.errors.messages[form.errors.first] }}
            </div>
          {%- endif -%}

          <div class="form-row">
            <div class="form-group">
              <label for="contact-first-name-{{ section.id }}">First name</label>
              <input 
                type="text" 
                id="contact-first-name-{{ section.id }}"
                name="contact[{{ section.settings.first_name_label }}]" 
                placeholder="{{ section.settings.first_name_placeholder }}"
                {% if section.settings.first_name_required %}required{% endif %}
                autocomplete="given-name"
              >
            </div>
            
            <div class="form-group">
              <label for="contact-surname-{{ section.id }}">Surname</label>
              <input 
                type="text" 
                id="contact-surname-{{ section.id }}"
                name="contact[{{ section.settings.surname_label }}]" 
                placeholder="{{ section.settings.surname_placeholder }}"
                {% if section.settings.surname_required %}required{% endif %}
                autocomplete="family-name"
              >
            </div>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label for="contact-phone-{{ section.id }}">Telephone</label>
              <input 
                type="tel" 
                id="contact-phone-{{ section.id }}"
                name="contact[{{ section.settings.phone_label }}]" 
                placeholder="{{ section.settings.phone_placeholder }}"
                {% if section.settings.phone_required %}required{% endif %}
                autocomplete="tel"
              >
            </div>
            
            <div class="form-group">
              <label for="contact-email-{{ section.id }}">Email</label>
              <input 
                type="email" 
                id="contact-email-{{ section.id }}"
                name="contact[email]" 
                placeholder="{{ section.settings.email_placeholder }}"
                value="{{ customer.email }}"
                required
                autocomplete="email"
              >
            </div>
          </div>

          {%- for block in section.blocks -%}
            {%- if block.type == 'custom_field' -%}
              {%- assign field_title = block.settings.title -%}
              {%- if field_title == blank -%}
                {%- capture field_title -%}Custom field {% increment custom_field %}{%- endcapture -%}
              {%- endif -%}

              <div class="form-group full-width" {{ block.shopify_attributes }}>
                {%- if block.settings.field_type == 'text' -%}
                  <label for="contact-{{ field_title | handleize }}-{{ section.id }}">{{ field_title }}</label>
                  <input 
                    type="text" 
                    id="contact-{{ field_title | handleize }}-{{ section.id }}"
                    name="contact[{{ field_title | escape }}]"
                    placeholder="{{ block.settings.placeholder }}"
                    {% if block.settings.required %}required{% endif %}
                  >
                {%- elsif block.settings.field_type == 'dropdown' and block.settings.dropdown_values != blank -%}
                  {%- assign values = block.settings.dropdown_values | split: ',' -%}
                  <label for="contact-{{ field_title | handleize }}-{{ section.id }}">{{ field_title }}</label>
                  <select 
                    id="contact-{{ field_title | handleize }}-{{ section.id }}"
                    name="contact[{{ field_title | escape }}]"
                    {% if block.settings.required %}required{% endif %}
                  >
                    <option value="">{{ block.settings.placeholder | default: 'Select an option' }}</option>
                    {%- for value in values -%}
                      <option value="{{ value | strip }}">{{ value | strip }}</option>
                    {%- endfor -%}
                  </select>
                {%- endif -%}
              </div>
            {%- endif -%}
          {%- endfor -%}

          <div class="form-group">
            <label for="contact-message-{{ section.id }}">Message</label>
            <textarea 
              id="contact-message-{{ section.id }}"
              name="contact[body]" 
              placeholder="{{ section.settings.message_placeholder }}"
              required
            ></textarea>
          </div>

          <button type="submit" class="submit-button">
            {{ section.settings.submit_button_text }}
          </button>
        {%- endform -%}
      </div>
    </div>

  </div>
</div>

{% schema %}
{
  "name": "Contact with Info & Form",
  "tag": "section",
  "class": "shopify-section--contact-info-form",
  "disabled_on": {
    "groups": ["header", "custom.overlay"]
  },
  "settings": [
    {
      "type": "header",
      "content": "General Settings"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "checkbox",
      "id": "separate_section_with_border",
      "label": "Separate section with border",
      "default": false
    },
    {
      "type": "range",
      "id": "container_width",
      "min": 800,
      "max": 1600,
      "step": 50,
      "unit": "px",
      "label": "Container max width",
      "default": 1300
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 5,
      "unit": "px",
      "label": "Section padding top",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 5,
      "unit": "px",
      "label": "Section padding bottom",
      "default": 60
    },
    {
      "type": "range",
      "id": "column_gap",
      "min": 20,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Gap between columns",
      "default": 60
    },
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "checkbox",
      "id": "use_gradient_background",
      "label": "Use gradient background",
      "default": false
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color (solid)",
      "default": "#f5f5f0",
      "info": "Used when gradient is disabled"
    },
    {
      "type": "color",
      "id": "gradient_color_1",
      "label": "Gradient color 1",
      "default": "#f5f5f0"
    },
    {
      "type": "color",
      "id": "gradient_color_2",
      "label": "Gradient color 2",
      "default": "#e8dcc8"
    },
    {
      "type": "select",
      "id": "gradient_direction",
      "label": "Gradient direction",
      "options": [
        {"value": "to bottom", "label": "Top to Bottom"},
        {"value": "to top", "label": "Bottom to Top"},
