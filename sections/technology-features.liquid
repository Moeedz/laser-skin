{% style %}
  .tft {
    --ease-out-expo: cubic-bezier(0.16, 1, 0.3, 1);
    width: 100%; overflow: hidden; position: relative;
    background-color: var(--section-bg);
    padding: var(--padding-top) 0 0;
  }

  .tft__texture {
    position: absolute; inset: 0; pointer-events: none; z-index: 0;
    opacity: var(--texture-opacity);
  }
  .tft__texture::before, .tft__texture::after { content: ''; position: absolute; inset: 0; }
  .tft__texture::before {
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.85' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)' opacity='0.04'/%3E%3C/svg%3E");
    background-size: 200px 200px;
  }
  .tft__texture::after {
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 512 512' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='f'%3E%3CfeTurbulence type='turbulence' baseFrequency='0.02 0.08' numOctaves='3' seed='2' stitchTiles='stitch'/%3E%3CfeColorMatrix type='saturate' values='0'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23f)' opacity='0.035'/%3E%3C/svg%3E");
    background-size: 512px 512px;
  }

  .tft__container {
    position: relative; z-index: 1;
    max-width: 1200px; margin: 0 auto; padding: 0 40px;
  }

  /* Header */
  .tft__header {
    text-align: center; margin-bottom: 36px;
    position: relative; z-index: 3;
  }

  .tft__heading {
    font-family: 'Georgia', 'Times New Roman', serif;
    font-size: var(--heading-size); font-weight: 700; font-style: italic;
    line-height: 1.2; color: var(--heading-color); margin: 0 0 16px;
  }

  .tft__subtitle {
    font-size: var(--body-size); line-height: 1.6;
    color: var(--text-color); margin: 0 auto; max-width: 600px;
  }

  /* Main area: image bg + frosted panel */
  .tft__main {
    position: relative;
    min-height: 480px;
    display: flex; align-items: center;
  }

  /* Background image â€” right side */
  .tft__image {
    position: absolute; right: 0; top: 0; bottom: 0;
    width: 55%; z-index: 0;
    overflow: hidden;
  }

  .tft__image img {
    width: 100%; height: 100%; object-fit: cover;
    object-position: var(--img-position);
  }

  .tft__image-fade {
    position: absolute; inset: 0;
    background: linear-gradient(
      to right,
      var(--section-bg) 0%,
      rgba(255, 255, 255, 0) 30%
    );
  }

  /* Frosted panel */
  .tft__panel {
    position: relative; z-index: 2;
    max-width: 580px; width: 100%;
    background: var(--panel-bg);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-radius: 14px;
    padding: 32px 28px;
    margin-left: 20px;
  }

  .tft__features {
    display: flex; flex-direction: column; gap: 0;
  }

  .tft__feature {
    display: flex; align-items: flex-start; gap: 18px;
    padding: 18px 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.06);
  }

  .tft__feature:last-child { border-bottom: none; }

  .tft__feature-icon {
    width: 40px; height: 40px; flex-shrink: 0;
    display: flex; align-items: center; justify-content: center;
    color: var(--icon-color); margin-top: 2px;
  }

  .tft__feature-icon img { width: 40px; height: 40px; object-fit: contain; }

  .tft__feature-content { flex: 1; }

  .tft__feature-title {
    font-family: 'Georgia', 'Times New Roman', serif;
    font-size: var(--feature-title-size); font-weight: 700;
    color: var(--heading-color); margin: 0 0 4px; line-height: 1.3;
  }

  .tft__feature-desc {
    font-size: calc(var(--body-size) - 1px); line-height: 1.55;
    color: var(--text-color); margin: 0;
  }

  /* CTA */
  .tft__btn-wrap {
    text-align: center;
    padding: 32px 0 var(--padding-bottom);
    position: relative; z-index: 3;
  }

  .tft__btn {
    display: inline-block;
    background: var(--btn-bg); color: var(--btn-text);
    font-size: 16px; font-weight: 500; letter-spacing: 0.03em;
    padding: 16px 52px; border-radius: 6px; text-decoration: none;
    transition: background 0.3s var(--ease-out-expo), transform 0.3s var(--ease-out-expo);
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
  }
  .tft__btn:hover {
    background: var(--btn-bg-hover); transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15); color: var(--btn-text);
  }

  /* Animations */
  [data-tft-animate] {
    opacity: 0; transform: translateY(24px);
    transition: opacity 0.7s var(--ease-out-expo), transform 0.7s var(--ease-out-expo);
  }
  [data-tft-animate].is-visible { opacity: 1; transform: translateY(0); }

  /* Responsive */
  @media screen and (max-width: 768px) {
    .tft__container { padding: 0 20px; }
    .tft__heading { font-size: calc(var(--heading-size) * 0.6); }
    .tft__main { min-height: auto; flex-direction: column; }
    .tft__image {
      position: relative; width: 100%; height: 280px;
      border-radius: 12px; margin-bottom: -40px;
    }
    .tft__image-fade {
      background: linear-gradient(to top, var(--section-bg) 0%, transparent 40%);
    }
    .tft__panel {
      max-width: 100%; margin-left: 0;
      backdrop-filter: blur(16px); -webkit-backdrop-filter: blur(16px);
    }
    .tft__btn { width: 100%; max-width: 360px; text-align: center; }
  }

  @media screen and (max-width: 480px) {
    .tft__container { padding: 0 16px; }
    .tft__heading { font-size: calc(var(--heading-size) * 0.48); }
    .tft__feature { gap: 14px; }
    .tft__feature-icon { width: 32px; height: 32px; }
    .tft__feature-icon img { width: 32px; height: 32px; }
  }
{% endstyle %}

{% assign feature_blocks = section.blocks | where: 'type', 'feature' %}

<section
  class="tft"
  id="tft-{{ section.id }}"
  style="
    --section-bg: {{ section.settings.section_bg }};
    --heading-color: {{ section.settings.heading_color }};
    --text-color: {{ section.settings.text_color }};
    --icon-color: {{ section.settings.icon_color }};
    --panel-bg: {{ section.settings.panel_bg }};
    --heading-size: {{ section.settings.heading_font_size }}px;
    --feature-title-size: {{ section.settings.feature_title_font_size }}px;
    --body-size: {{ section.settings.body_font_size }}px;
    --texture-opacity: {{ section.settings.texture_opacity | divided_by: 100.0 }};
    --img-position: {{ section.settings.image_position }};
    --btn-bg: {{ section.settings.button_bg }};
    --btn-text: {{ section.settings.button_text }};
    --btn-bg-hover: {{ section.settings.button_bg_hover }};
    --padding-top: {{ section.settings.padding_top }}px;
    --padding-bottom: {{ section.settings.padding_bottom }}px;
  "
>
  {% if section.settings.show_texture %}<div class="tft__texture"></div>{% endif %}

  <div class="tft__container">
    <div class="tft__header" data-tft-animate data-delay="0">
      {% if section.settings.heading != blank %}
        <h2 class="tft__heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.subtitle != blank %}
        <p class="tft__subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>

    <div class="tft__main" data-tft-animate data-delay="1">
      {% if section.settings.side_image != blank %}
        <div class="tft__image">
          {{ section.settings.side_image | image_url: width: 900 | image_tag: loading: 'lazy', widths: '500,700,900' }}
          <div class="tft__image-fade"></div>
        </div>
      {% endif %}

      {% if feature_blocks.size > 0 %}
        <div class="tft__panel">
          <div class="tft__features">
            {% for block in feature_blocks %}
              <div class="tft__feature" {{ block.shopify_attributes }}>
                {% if block.settings.icon_image != blank %}
                  <div class="tft__feature-icon">
                    {{ block.settings.icon_image | image_url: width: 80 | image_tag: loading: 'lazy', widths: '40,60,80' }}
                  </div>
                {% endif %}
                <div class="tft__feature-content">
                  {% if block.settings.title != blank %}
                    <h4 class="tft__feature-title">{{ block.settings.title }}</h4>
                  {% endif %}
                  {% if block.settings.description != blank %}
                    <p class="tft__feature-desc">{{ block.settings.description }}</p>
                  {% endif %}
                </div>
              </div>
            {% endfor %}
          </div>
        </div>
      {% endif %}
    </div>

    {% if section.settings.button_label != blank %}
      <div class="tft__btn-wrap" data-tft-animate data-delay="2">
        <a href="{{ section.settings.button_link }}" class="tft__btn">{{ section.settings.button_label }}</a>
      </div>
    {% endif %}
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var s = document.getElementById('tft-{{ section.id }}');
    if (!s) return;
    var els = s.querySelectorAll('[data-tft-animate]');
    var obs = new IntersectionObserver(function (entries) {
      entries.forEach(function (e) {
        if (e.isIntersecting) {
          var d = parseInt(e.target.getAttribute('data-delay') || '0', 10);
          setTimeout(function () { e.target.classList.add('is-visible'); }, d * 150);
          obs.unobserve(e.target);
        }
      });
    }, { threshold: 0.1 });
    els.forEach(function (el) { obs.observe(el); });
  });
</script>

{% schema %}
{
  "name": "Technology Features",
  "tag": "section",
  "class": "technology-features-section",
  "settings": [
    { "type": "textarea", "id": "heading", "label": "Heading", "default": "Advanced technology. Superior tattoo removal." },
    { "type": "textarea", "id": "subtitle", "label": "Subtitle", "default": "We use the latest laser technology and gold-standard protocols to safely and effectively erase unwanted ink." },
    { "type": "header", "content": "Image" },
    { "type": "image_picker", "id": "side_image", "label": "Side Image" },
    {
      "type": "select", "id": "image_position", "label": "Image Focus",
      "options": [
        { "value": "center center", "label": "Center" },
        { "value": "center top", "label": "Top" },
        { "value": "right center", "label": "Right" },
        { "value": "left center", "label": "Left" }
      ],
      "default": "center center"
    },
    { "type": "header", "content": "Button" },
    { "type": "text", "id": "button_label", "label": "Button Label", "default": "Book your consultation" },
    { "type": "url", "id": "button_link", "label": "Button Link" },
    { "type": "header", "content": "Background & Texture" },
    { "type": "color", "id": "section_bg", "label": "Section Background", "default": "#ddd0c4" },
    { "type": "checkbox", "id": "show_texture", "label": "Show Paper Texture", "default": true },
    { "type": "range", "id": "texture_opacity", "label": "Texture Intensity", "min": 0, "max": 100, "step": 5, "default": 80, "unit": "%" },
    { "type": "header", "content": "Colors" },
    { "type": "color", "id": "heading_color", "label": "Heading Color", "default": "#3a2820" },
    { "type": "color", "id": "text_color", "label": "Text Color", "default": "#5a4a3a" },
    { "type": "color", "id": "icon_color", "label": "Icon Color", "default": "#7a6a50" },
    { "type": "color", "id": "panel_bg", "label": "Panel Background", "default": "#ddd0c4c0" },
    { "type": "color", "id": "button_bg", "label": "Button Background", "default": "#6a6058" },
    { "type": "color", "id": "button_text", "label": "Button Text", "default": "#ffffff" },
    { "type": "color", "id": "button_bg_hover", "label": "Button Hover BG", "default": "#5a504a" },
    { "type": "header", "content": "Typography" },
    { "type": "range", "id": "heading_font_size", "label": "Heading Font Size", "min": 28, "max": 56, "step": 2, "default": 40, "unit": "px" },
    { "type": "range", "id": "feature_title_font_size", "label": "Feature Title Size", "min": 16, "max": 26, "step": 1, "default": 20, "unit": "px" },
    { "type": "range", "id": "body_font_size", "label": "Body Font Size", "min": 14, "max": 20, "step": 1, "default": 16, "unit": "px" },
    { "type": "header", "content": "Layout" },
    { "type": "range", "id": "padding_top", "label": "Padding Top", "min": 0, "max": 120, "step": 4, "default": 60, "unit": "px" },
    { "type": "range", "id": "padding_bottom", "label": "Padding Bottom", "min": 0, "max": 120, "step": 4, "default": 48, "unit": "px" }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        { "type": "image_picker", "id": "icon_image", "label": "Icon Image" },
        { "type": "text", "id": "title", "label": "Title", "default": "Q-switched and picosecond lasers" },
        { "type": "textarea", "id": "description", "label": "Description", "default": "Fragment ink into tiny particles for faster removal" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Technology Features",
      "blocks": [
        { "type": "feature", "settings": { "title": "Q-switched and picosecond lasers", "description": "Fragment ink into tiny particles for faster removal" } },
        { "type": "feature", "settings": { "title": "Multiple wavelengths", "description": "Treats black and coloured inks effectively" } },
        { "type": "feature", "settings": { "title": "Advanced skin cooling", "description": "Minimises discomfort and protects skin throughout the treatment." } },
        { "type": "feature", "settings": { "title": "Personalised treatment design", "description": "Tailored plans based on your tattoo and skin type" } },
        { "type": "feature", "settings": { "title": "Minimises scarring", "description": "Trained clinicians use protocols to reduce risk" } }
      ]
    }
  ]
}
{% endschema %}
