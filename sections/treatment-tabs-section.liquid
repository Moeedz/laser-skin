<script>
  function switchTab(tabId) {
    // Update ALL tab buttons (both top and content tabs)
    document.querySelectorAll('.tab-button').forEach(btn => {
      btn.classList.remove('active');
    });
    document.querySelectorAll(`[data-tab="${tabId}"]`).forEach(btn => {
      btn.classList.add('active');
    });

    // Update tab content
    document.querySelectorAll('.tab-content').forEach(content => {
      content.classList.remove('active');
    });
    document.querySelector(`[data-tab-content="${tabId}"]`).classList.add('active');

    // Close any open package containers
    document.querySelectorAll('.packages-container').forEach(container => {
      container.classList.remove('active');
    });

    // Close any open session options
    document.querySelectorAll('.session-options').forEach(session => {
      session.classList.remove('active');
    });
  }

  function togglePackages(tabId) {
    const packagesContainer = document.querySelector(`[data-packages="${tabId}"]`);
    packagesContainer.classList.toggle('active');
  }

  function toggleSessionOptions(packageId) {
    const sessionOptions = document.getElementById(`session-${packageId}`);
    sessionOptions.classList.toggle('active');
  }

  function toggleCollapsible(collapsibleId) {
    const collapsibleTab = document.getElementById(collapsibleId);
    collapsibleTab.classList.toggle('active');
  }

  // Modal Functions
  function openConsultationModal(tabId) {
    const modal = document.getElementById(`consultation-modal-${tabId}`);
    if (modal) {
      modal.classList.add('active');
      document.body.style.overflow = 'hidden'; // Prevent body scroll when modal is open
    }
  }

  function closeConsultationModal(tabId) {
    const modal = document.getElementById(`consultation-modal-${tabId}`);
    if (modal) {
      modal.classList.remove('active');
      document.body.style.overflow = ''; // Restore body scroll
    }
  }

  // Close modal when clicking on overlay
  document.addEventListener('DOMContentLoaded', function() {
    // Handle session selection
    let selectedSessionLink = '';

    document.querySelectorAll('.session-option').forEach(option => {
      option.addEventListener('click', function() {
        // Remove selected class from siblings
        const parent = this.parentElement;
        parent.querySelectorAll('.session-option').forEach(opt => {
          opt.classList.remove('selected');
        });
        
        // Add selected class to clicked option
        this.classList.add('selected');
        
        // Store the link from data attribute
        selectedSessionLink = this.getAttribute('data-link');
        
        // Enable the SELECT button
        const selectButton = parent.querySelector('.session-select');
        selectButton.classList.add('enabled');
        
        // Add click handler to SELECT button
        selectButton.onclick = function() {
          if (selectedSessionLink && selectedSessionLink !== '') {
            window.location.href = selectedSessionLink;
          }
        };
      });
    });

    // Close modal when clicking on overlay (not on modal content)
    document.querySelectorAll('.consultation-modal-overlay').forEach(overlay => {
      overlay.addEventListener('click', function(e) {
        if (e.target === this) {
          this.classList.remove('active');
          document.body.style.overflow = '';
        }
      });
    });

    // Close modal with Escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        document.querySelectorAll('.consultation-modal-overlay.active').forEach(modal => {
          modal.classList.remove('active');
          document.body.style.overflow = '';
        });
      }
    });
  });
</script>

