    },
    {
      "type": "color",
      "id": "cross_icon_bg",
      "label": "Cross icon background",
      "default": "#d32f2f"
    },
    {
      "type": "color",
      "id": "cross_icon_color",
      "label": "Cross icon color",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "comparison_row",
      "name": "Comparison row",
      "settings": [
        {
          "type": "textarea",
          "id": "left_text",
          "label": "Left text (Your product benefit)",
          "default": "Natural oils and butters (olive oil, coconut oil, shea butter)"
        },
        {
          "type": "textarea",
          "id": "right_text",
          "label": "Right text (Competitor drawback)",
          "default": "Synthetic detergents, harsh chemicals, artificial fragrances"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Comparison",
      "blocks": [
        {
          "type": "comparison_row",
          "settings": {
            "left_text": "Natural oils and butters (olive oil, coconut oil, shea butter)",
            "right_text": "Synthetic detergents, harsh chemicals, artificial fragrances"
          }
        },
        {
          "type": "comparison_row",
          "settings": {
            "left_text": "Naturally retains glycerin (a moisturizing byproduct)",
            "right_text": "Glycerin removed for use in other products, leading to dryness"
          }
        },
        {
          "type": "comparison_row",
          "settings": {
            "left_text": "Highly moisturizing, gentle on the skin",
            "right_text": "Often drying, can irritate sensitive skin"
          }
        },
        {
          "type": "comparison_row",
          "settings": {
            "left_text": "Small-batch, artisanal production",
            "right_text": "Mass-produced, large-scale manufacturing"
          }
        }
      ]
    }
  ]
}
{% endschema %}
