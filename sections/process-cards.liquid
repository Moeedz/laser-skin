    { "type": "header", "content": "Background" },
    { "type": "color_background", "id": "section_bg", "label": "Section Background (gradient)", "default": "linear-gradient(180deg, #c9b4b0 0%, #d4bfc0 25%, #c8b5c0 50%, #b8a8b8 75%, #c2b0a8 100%)" },
    { "type": "range", "id": "shimmer_opacity", "label": "Shimmer / Sparkle Intensity", "min": 0, "max": 100, "step": 5, "default": 80, "unit": "%" },
    { "type": "header", "content": "Colors" },
    { "type": "color", "id": "heading_color", "label": "Heading Color", "default": "#3a2820" },
    { "type": "color", "id": "text_color", "label": "Subtitle Color", "default": "#4a3a32" },
    { "type": "color", "id": "card_title_color", "label": "Card Title Color", "default": "#3a2820" },
    { "type": "color", "id": "card_text_color", "label": "Card Text Color", "default": "#5a4a42" },
    { "type": "header", "content": "Typography" },
    { "type": "range", "id": "heading_font_size", "label": "Heading Font Size", "min": 28, "max": 56, "step": 2, "default": 42, "unit": "px" },
    { "type": "range", "id": "card_title_font_size", "label": "Card Title Font Size", "min": 18, "max": 30, "step": 1, "default": 24, "unit": "px" },
    { "type": "range", "id": "body_font_size", "label": "Body Font Size", "min": 14, "max": 20, "step": 1, "default": 16, "unit": "px" },
    { "type": "header", "content": "Layout" },
    { "type": "range", "id": "padding_top", "label": "Padding Top", "min": 0, "max": 120, "step": 4, "default": 80, "unit": "px" },
    { "type": "range", "id": "padding_bottom", "label": "Padding Bottom", "min": 0, "max": 120, "step": 4, "default": 80, "unit": "px" }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Process Card",
      "settings": [
        { "type": "text", "id": "title", "label": "Title", "default": "Targeted precision" },
        { "type": "textarea", "id": "description", "label": "Description", "default": "Energy or controlled cautery is applied only to the blemish, protecting surrounding skin" },
        { "type": "color", "id": "card_bg", "label": "Card Background", "default": "#e8ddd4" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Process Cards",
      "blocks": [
        { "type": "card", "settings": { "title": "Targeted precision", "description": "Energy or controlled cautery is applied only to the blemish, protecting surrounding skin", "card_bg": "#e8ddd4" } },
        { "type": "card", "settings": { "title": "Clinician-controlled treatment", "description": "Depth and intensity adjusted based on skin type and blemish type", "card_bg": "#c8cedf" } },
        { "type": "card", "settings": { "title": "Natural healing response", "description": "The treated area heals gradually as the skin renews itself", "card_bg": "#e8ddd4" } }
      ]
    }
  ]
}
{% endschema %}
