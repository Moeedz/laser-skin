{% style %}
  .iic {
    --ease-out-expo: cubic-bezier(0.16, 1, 0.3, 1);
    width: 100%; overflow: hidden; position: relative;
    background-color: var(--section-bg);
    padding: var(--padding-top) 0 var(--padding-bottom);
  }

  .iic__texture {
    position: absolute; inset: 0; pointer-events: none; z-index: 0;
    opacity: var(--texture-opacity);
  }
  .iic__texture::before, .iic__texture::after { content: ''; position: absolute; inset: 0; }
  .iic__texture::before {
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.85' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)' opacity='0.04'/%3E%3C/svg%3E");
    background-size: 200px 200px;
  }
  .iic__texture::after {
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 512 512' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='f'%3E%3CfeTurbulence type='turbulence' baseFrequency='0.02 0.08' numOctaves='3' seed='2' stitchTiles='stitch'/%3E%3CfeColorMatrix type='saturate' values='0'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23f)' opacity='0.035'/%3E%3C/svg%3E");
    background-size: 512px 512px;
  }

  .iic__container {
    position: relative; z-index: 1;
    max-width: 1000px; margin: 0 auto; padding: 0 40px;
  }

  /* Header */
  .iic__header { text-align: center; margin-bottom: 40px; }

  .iic__heading {
    font-family: 'Georgia', 'Times New Roman', serif;
    font-size: var(--heading-size); font-weight: 400; font-style: italic;
    line-height: 1.2; color: var(--heading-color); margin: 0 0 14px;
  }

  .iic__underline {
    width: 40px; height: 2px;
    background: var(--accent-color);
    margin: 0 auto;
  }

  /* Columns */
  .iic__columns {
    display: grid;
    grid-template-columns: repeat(var(--col-count, 3), 1fr);
    gap: 0;
    margin-bottom: 40px;
  }

  .iic__col {
    text-align: center;
    padding: 0 28px;
    border-right: 1px solid var(--divider-color);
  }

  .iic__col:last-child { border-right: none; }
  .iic__col:first-child { padding-left: 0; }
  .iic__col:last-child { padding-right: 0; }

  /* Icon */
  .iic__col-icon {
    width: 64px; height: 64px;
    margin: 0 auto 16px;
    display: flex; align-items: center; justify-content: center;
  }

  .iic__col-icon img {
    width: 60px; height: 60px; object-fit: contain;
  }

  /* Title */
  .iic__col-title {
    font-family: 'Georgia', 'Times New Roman', serif;
    font-size: calc(var(--body-size) + 3px); font-weight: 700;
    color: var(--heading-color); margin: 0 0 10px; line-height: 1.3;
  }

  /* Description */
  .iic__col-desc {
    font-size: var(--body-size); line-height: 1.6;
    color: var(--text-color); margin: 0;
  }

  /* Footer */
  .iic__footer { text-align: left; }

  .iic__footer-text {
    font-size: var(--body-size); line-height: 1.6;
    color: var(--text-color); margin: 0; font-style: italic;
  }

  /* Animations */
  [data-iic-animate] {
    opacity: 0; transform: translateY(24px);
    transition: opacity 0.7s var(--ease-out-expo), transform 0.7s var(--ease-out-expo);
  }
  [data-iic-animate].is-visible { opacity: 1; transform: translateY(0); }

  /* Responsive */
  @media screen and (max-width: 768px) {
    .iic__container { padding: 0 20px; }
    .iic__heading { font-size: calc(var(--heading-size) * 0.65); }
    .iic__columns {
      grid-template-columns: 1fr;
      gap: 28px;
    }
    .iic__col {
      border-right: none;
      border-bottom: 1px solid var(--divider-color);
      padding: 0 0 28px;
    }
    .iic__col:last-child { border-bottom: none; padding-bottom: 0; }
  }

  @media screen and (max-width: 480px) {
    .iic__container { padding: 0 16px; }
    .iic__heading { font-size: calc(var(--heading-size) * 0.52); }
  }
{% endstyle %}

{% assign col_blocks = section.blocks | where: 'type', 'column' %}

<section
  class="iic"
  id="iic-{{ section.id }}"
  style="
    --section-bg: {{ section.settings.section_bg }};
    --heading-color: {{ section.settings.heading_color }};
    --text-color: {{ section.settings.text_color }};
    --accent-color: {{ section.settings.accent_color }};
    --divider-color: {{ section.settings.divider_color }};
    --heading-size: {{ section.settings.heading_font_size }}px;
    --body-size: {{ section.settings.body_font_size }}px;
    --texture-opacity: {{ section.settings.texture_opacity | divided_by: 100.0 }};
    --padding-top: {{ section.settings.padding_top }}px;
    --padding-bottom: {{ section.settings.padding_bottom }}px;
    --col-count: {{ col_blocks.size | at_most: 4 }};
  "
>
  {% if section.settings.show_texture %}<div class="iic__texture"></div>{% endif %}

  <div class="iic__container">
    {% if section.settings.heading != blank %}
      <div class="iic__header" data-iic-animate data-delay="0">
        <h2 class="iic__heading">{{ section.settings.heading }}</h2>
        {% if section.settings.show_underline %}
          <div class="iic__underline"></div>
        {% endif %}
      </div>
    {% endif %}

    {% if col_blocks.size > 0 %}
      <div class="iic__columns" data-iic-animate data-delay="1">
        {% for block in col_blocks %}
          <div class="iic__col" {{ block.shopify_attributes }}>
            {% if block.settings.icon != blank %}
              <div class="iic__col-icon">
                {{ block.settings.icon | image_url: width: 120 | image_tag: loading: 'lazy' }}
              </div>
            {% endif %}
            {% if block.settings.title != blank %}
              <h3 class="iic__col-title">{{ block.settings.title }}</h3>
            {% endif %}
            {% if block.settings.description != blank %}
              <p class="iic__col-desc">{{ block.settings.description }}</p>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endif %}

    {% if section.settings.footer_text != blank %}
      <div class="iic__footer" data-iic-animate data-delay="2">
        <p class="iic__footer-text">{{ section.settings.footer_text }}</p>
      </div>
    {% endif %}
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var s = document.getElementById('iic-{{ section.id }}');
    if (!s) return;
    var els = s.querySelectorAll('[data-iic-animate]');
    var obs = new IntersectionObserver(function (entries) {
      entries.forEach(function (e) {
        if (e.isIntersecting) {
          var d = parseInt(e.target.getAttribute('data-delay') || '0', 10);
          setTimeout(function () { e.target.classList.add('is-visible'); }, d * 150);
          obs.unobserve(e.target);
        }
      });
    }, { threshold: 0.1 });
    els.forEach(function (el) { obs.observe(el); });
  });
</script>

{% schema %}
{
  "name": "Icon Info Columns",
  "tag": "section",
  "class": "icon-info-columns-section",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Aftercare & Downtime" },
    { "type": "checkbox", "id": "show_underline", "label": "Show Heading Underline", "default": true },
    { "type": "textarea", "id": "footer_text", "label": "Footer Text", "default": "Personalised aftercare advice will be provided following treatment." },
    { "type": "header", "content": "Background & Texture" },
    { "type": "color", "id": "section_bg", "label": "Section Background", "default": "#e4ddd6" },
    { "type": "checkbox", "id": "show_texture", "label": "Show Paper Texture", "default": true },
    { "type": "range", "id": "texture_opacity", "label": "Texture Intensity", "min": 0, "max": 100, "step": 5, "default": 80, "unit": "%" },
    { "type": "header", "content": "Colors" },
    { "type": "color", "id": "heading_color", "label": "Heading Color", "default": "#3a2820" },
    { "type": "color", "id": "text_color", "label": "Text Color", "default": "#5a4a3a" },
    { "type": "color", "id": "accent_color", "label": "Underline Color", "default": "#c4956a" },
    { "type": "color", "id": "divider_color", "label": "Divider Color", "default": "#ccc4ba" },
    { "type": "header", "content": "Typography" },
    { "type": "range", "id": "heading_font_size", "label": "Heading Font Size", "min": 28, "max": 56, "step": 2, "default": 36, "unit": "px" },
    { "type": "range", "id": "body_font_size", "label": "Body Font Size", "min": 14, "max": 20, "step": 1, "default": 16, "unit": "px" },
    { "type": "header", "content": "Layout" },
    { "type": "range", "id": "padding_top", "label": "Padding Top", "min": 0, "max": 120, "step": 4, "default": 60, "unit": "px" },
    { "type": "range", "id": "padding_bottom", "label": "Padding Bottom", "min": 0, "max": 120, "step": 4, "default": 60, "unit": "px" }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Info Column",
      "settings": [
        { "type": "image_picker", "id": "icon", "label": "Icon Image" },
        { "type": "text", "id": "title", "label": "Title", "default": "Recovery Time" },
        { "type": "textarea", "id": "description", "label": "Description", "default": "Minimal downtime — most patients resume regular activities within 1-2 days." }
      ]
    }
  ],
  "presets": [
    {
      "name": "Icon Info Columns",
      "blocks": [
        { "type": "column", "settings": { "title": "Recovery Time", "description": "Minimal downtime — most patients resume regular activities within 1-2 days." } },
        { "type": "column", "settings": { "title": "What to Expect", "description": "Temporary redness, tenderness, or swelling of treated areas, typically resolving within a few days." } },
        { "type": "column", "settings": { "title": "Aftercare", "description": "Keep the area hydrated and protected from sun exposure while allowing time for the skin to heal." } }
      ]
    }
  ]
}
{% endschema %}
