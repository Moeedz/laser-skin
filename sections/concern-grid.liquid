{% style %}
  .cgd {
    --ease-out-expo: cubic-bezier(0.16, 1, 0.3, 1);
    width: 100%; overflow: hidden; position: relative;
    min-height: var(--section-height);
  }

  /* Background image */
  .cgd__bg {
    position: absolute; inset: 0; z-index: 0;
  }
  .cgd__bg img {
    width: 100%; height: 100%; object-fit: cover; object-position: var(--bg-position);
  }
  .cgd__bg-overlay {
    position: absolute; inset: 0;
    background: linear-gradient(
      to right,
      var(--overlay-strong) 0%,
      var(--overlay-mid) 55%,
      var(--overlay-fade) 75%,
      transparent 100%
    );
  }

  /* Shimmer texture */
  .cgd__shimmer {
    position: absolute; inset: 0; pointer-events: none; z-index: 1;
    opacity: var(--shimmer-opacity);
  }
  .cgd__shimmer::before {
    content: ''; position: absolute; inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='1.2' numOctaves='5' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)' opacity='0.05'/%3E%3C/svg%3E");
    background-size: 200px 200px;
  }

  .cgd__container {
    position: relative; z-index: 2;
    max-width: 1200px; margin: 0 auto;
    padding: var(--padding-top) 40px var(--padding-bottom);
  }

  /* Header */
  .cgd__header { text-align: center; margin-bottom: 32px; }

  .cgd__heading {
    font-family: 'Georgia', 'Times New Roman', serif;
    font-size: var(--heading-size); font-weight: 700;
    line-height: 1.2; color: var(--heading-color); margin: 0 0 16px;
  }

  .cgd__subtitle {
    font-size: var(--body-size); font-style: italic;
    line-height: 1.6; color: var(--text-color); margin: 0 auto; max-width: 600px;
  }

  /* Grid â€” takes ~60% left */
  .cgd__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 14px;
    max-width: 65%;
  }

  .cgd__card {
    background: var(--card-bg);
    border-radius: 12px;
    padding: 28px 24px 24px;
    text-align: center;
    transition: transform 0.3s var(--ease-out-expo), box-shadow 0.3s ease;
  }

  .cgd__card:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.06);
  }

  .cgd__card-icon {
    width: 48px; height: 48px;
    margin: 0 auto 14px;
    display: flex; align-items: center; justify-content: center;
    color: var(--icon-color);
  }
  .cgd__card-icon img { width: 48px; height: 48px; object-fit: contain; }

  .cgd__card-title {
    font-family: 'Georgia', 'Times New Roman', serif;
    font-size: var(--card-title-size); font-weight: 600;
    color: var(--heading-color); margin: 0 0 6px; line-height: 1.3;
  }

  .cgd__card-sub {
    font-size: calc(var(--body-size) - 1px);
    color: var(--text-color); opacity: 0.8; margin: 0; line-height: 1.4;
  }

  /* Animations */
  [data-cgd-animate] {
    opacity: 0; transform: translateY(24px);
    transition: opacity 0.7s var(--ease-out-expo), transform 0.7s var(--ease-out-expo);
  }
  [data-cgd-animate].is-visible { opacity: 1; transform: translateY(0); }

  /* Responsive */
  @media screen and (max-width: 1024px) {
    .cgd__grid { max-width: 75%; }
  }

  @media screen and (max-width: 768px) {
    .cgd__container { padding: var(--padding-top) 20px var(--padding-bottom); }
    .cgd__heading { font-size: calc(var(--heading-size) * 0.6); }
    .cgd__grid { max-width: 100%; gap: 12px; }
    .cgd__card { padding: 22px 18px 20px; }
    .cgd__bg-overlay {
      background: linear-gradient(
        to bottom,
        var(--overlay-strong) 0%,
        var(--overlay-mid) 70%,
        var(--overlay-fade) 100%
      );
    }
  }

  @media screen and (max-width: 480px) {
    .cgd__container { padding: var(--padding-top) 16px var(--padding-bottom); }
    .cgd__heading { font-size: calc(var(--heading-size) * 0.48); }
    .cgd__grid { grid-template-columns: 1fr; max-width: 400px; margin: 0 auto; }
    .cgd__card-icon { width: 40px; height: 40px; }
    .cgd__card-icon img { width: 40px; height: 40px; }
  }
{% endstyle %}

{% assign card_blocks = section.blocks | where: 'type', 'concern' %}

<section
  class="cgd"
  id="cgd-{{ section.id }}"
  style="
    --heading-color: {{ section.settings.heading_color }};
    --text-color: {{ section.settings.text_color }};
    --icon-color: {{ section.settings.icon_color }};
    --card-bg: {{ section.settings.card_bg }};
    --overlay-strong: {{ section.settings.overlay_strong }};
    --overlay-mid: {{ section.settings.overlay_mid }};
    --overlay-fade: {{ section.settings.overlay_fade }};
    --heading-size: {{ section.settings.heading_font_size }}px;
    --card-title-size: {{ section.settings.card_title_font_size }}px;
    --body-size: {{ section.settings.body_font_size }}px;
    --shimmer-opacity: {{ section.settings.shimmer_opacity | divided_by: 100.0 }};
    --section-height: {{ section.settings.section_height }}px;
    --bg-position: {{ section.settings.bg_position }};
    --padding-top: {{ section.settings.padding_top }}px;
    --padding-bottom: {{ section.settings.padding_bottom }}px;
  "
>
  {% if section.settings.bg_image != blank %}
    <div class="cgd__bg">
      {{ section.settings.bg_image | image_url: width: 2000 | image_tag: loading: 'lazy', widths: '800,1200,1600,2000' }}
      <div class="cgd__bg-overlay"></div>
    </div>
  {% endif %}
  <div class="cgd__shimmer"></div>

  <div class="cgd__container">
    <div class="cgd__header" data-cgd-animate data-delay="0">
      {% if section.settings.heading != blank %}
        <h2 class="cgd__heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.subtitle != blank %}
        <p class="cgd__subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>

    {% if card_blocks.size > 0 %}
      <div class="cgd__grid" data-cgd-animate data-delay="1">
        {% for block in card_blocks %}
          <div class="cgd__card" {{ block.shopify_attributes }}>
            {% if block.settings.icon_image != blank %}
              <div class="cgd__card-icon">
                {{ block.settings.icon_image | image_url: width: 100 | image_tag: loading: 'lazy', widths: '50,75,100' }}
              </div>
            {% endif %}
            {% if block.settings.title != blank %}
              <p class="cgd__card-title">{{ block.settings.title }}</p>
            {% endif %}
            {% if block.settings.subtitle != blank %}
              <p class="cgd__card-sub">{{ block.settings.subtitle }}</p>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var s = document.getElementById('cgd-{{ section.id }}');
    if (!s) return;
    var els = s.querySelectorAll('[data-cgd-animate]');
    var obs = new IntersectionObserver(function (entries) {
      entries.forEach(function (e) {
        if (e.isIntersecting) {
          var d = parseInt(e.target.getAttribute('data-delay') || '0', 10);
          setTimeout(function () { e.target.classList.add('is-visible'); }, d * 150);
          obs.unobserve(e.target);
        }
      });
    }, { threshold: 0.1 });
    els.forEach(function (el) { obs.observe(el); });
  });
</script>

{% schema %}
