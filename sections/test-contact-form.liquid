<div style="padding: 40px; max-width: 600px; margin: 0 auto; background: #f5f5f5;">
  <h2 style="margin-bottom: 20px;">ğŸ§ª Simple Test Form</h2>
  
  {%- form 'contact' -%}
    {%- if form.posted_successfully? -%}
      <div style="padding: 20px; background: #d4edda; color: #155724; margin-bottom: 20px; border-radius: 5px;">
        âœ… SUCCESS! Form submitted via POST correctly!
      </div>
    {%- endif -%}
    
    {%- if form.errors -%}
      <div style="padding: 20px; background: #f8d7da; color: #721c24; margin-bottom: 20px; border-radius: 5px;">
        âŒ Error: {{ form.errors.messages[form.errors.first] }}
      </div>
    {%- endif -%}
    
    <div style="margin-bottom: 15px;">
      <label style="display: block; margin-bottom: 5px; font-weight: bold;">Name:</label>
      <input type="text" name="contact[name]" required style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px;">
    </div>
    
    <div style="margin-bottom: 15px;">
      <label style="display: block; margin-bottom: 5px; font-weight: bold;">Email:</label>
      <input type="email" name="contact[email]" required style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px;">
    </div>
    
    <div style="margin-bottom: 15px;">
      <label style="display: block; margin-bottom: 5px; font-weight: bold;">Message:</label>
      <textarea name="contact[body]" required style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px; min-height: 100px;"></textarea>
    </div>
    
    <button type="submit" style="padding: 12px 30px; background: #007bff; color: white; border: none; border-radius: 5px; cursor: pointer; font-size: 16px;">
      Submit Test
    </button>
  {%- endform -%}
  
