{% style %}
  .ifh {
    --ease-out-expo: cubic-bezier(0.16, 1, 0.3, 1);
    width: 100%; overflow: hidden; position: relative;
    min-height: var(--section-height);
  }

  .ifh__bg {
    position: absolute; inset: 0; z-index: 0;
  }
  .ifh__bg--mobile { display: none; }
  .ifh__bg img {
    width: 100%; height: 100%; object-fit: cover; object-position: var(--bg-position);
  }
  .ifh__bg-overlay {
    position: absolute; inset: 0;
    background: linear-gradient(
      to right,
      var(--overlay-strong) 0%,
      var(--overlay-mid) 50%,
      var(--overlay-fade) 70%,
      transparent 100%
    );
  }

  .ifh__shimmer {
    position: absolute; inset: 0; pointer-events: none; z-index: 1;
    opacity: var(--shimmer-opacity);
  }
  .ifh__shimmer::before {
    content: ''; position: absolute; inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='1.2' numOctaves='5' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)' opacity='0.05'/%3E%3C/svg%3E");
    background-size: 200px 200px;
  }

  .ifh__container {
    position: relative; z-index: 2;
    max-width: 1200px; margin: 0 auto;
    padding: var(--padding-top) 40px var(--padding-bottom);
  }

  .ifh__content {
    max-width: var(--content-width);
  }

  .ifh__heading {
    font-family: 'Georgia', 'Times New Roman', serif;
    font-size: var(--heading-size); font-weight: 700;
    line-height: 1.2; color: var(--heading-color); margin: 0 0 24px;
  }

  .ifh__body {
    font-size: var(--body-size); line-height: 1.75;
    color: var(--text-color); margin: 0 0 32px;
  }

  .ifh__body p { margin: 0 0 18px; }
  .ifh__body p:last-child { margin-bottom: 0; }

  /* Icon bullet points */
  .ifh__points-section { margin-top: 8px; }

  .ifh__points-heading {
    font-family: 'Georgia', 'Times New Roman', serif;
    font-size: calc(var(--body-size) + 5px); font-weight: 700;
    color: var(--heading-color); margin: 0 0 16px; line-height: 1.3;
  }

  .ifh__points {
    display: flex; flex-direction: column; gap: 14px;
  }

  .ifh__point {
    display: flex; align-items: flex-start; gap: 14px;
    font-size: var(--body-size); line-height: 1.55; color: var(--text-color);
  }

  .ifh__point-icon {
    flex-shrink: 0; width: 28px; height: 28px;
    display: flex; align-items: center; justify-content: center;
    color: var(--icon-color); margin-top: 1px;
  }
  .ifh__point-icon img { width: 28px; height: 28px; object-fit: contain; }

  /* Fallback checkmark */
  .ifh__point-icon svg { width: 20px; height: 20px; }

  .ifh__point-text { display: flex; flex-direction: column; gap: 2px; }

  .ifh__point-title {
    font-family: 'Georgia', 'Times New Roman', serif;
    font-size: calc(var(--body-size) + 2px); font-weight: 700;
    color: var(--heading-color); display: block; line-height: 1.3;
    margin-bottom: 2px;
  }

  /* Animations */
  [data-ifh-animate] {
    opacity: 0; transform: translateY(24px);
    transition: opacity 0.7s var(--ease-out-expo), transform 0.7s var(--ease-out-expo);
  }
  [data-ifh-animate].is-visible { opacity: 1; transform: translateY(0); }

  /* Responsive */
  @media screen and (max-width: 768px) {
    .ifh {
      min-height: auto;
      display: flex; flex-direction: column;
    }

    /* Image becomes a visible block at the top */
    .ifh__bg--desktop { display: none; }
    .ifh__bg--mobile {
      display: block;
      position: relative; inset: auto;
      width: 100%; height: 280px;
      flex-shrink: 0; order: -1;
    }
    .ifh__bg--mobile img {
      width: 100%; height: 100%; object-fit: cover;
    }
    .ifh__bg-overlay { display: none; }

    .ifh__shimmer { display: none; }

    .ifh__container {
      padding: 32px 20px var(--padding-bottom);
      background-color: var(--mobile-content-bg, var(--overlay-strong));
    }
    .ifh__heading { font-size: calc(var(--heading-size) * 0.6); }
    .ifh__content { max-width: 100%; }
  }

  @media screen and (max-width: 480px) {
    .ifh__container { padding: 28px 16px var(--padding-bottom); }
    .ifh__heading { font-size: calc(var(--heading-size) * 0.48); }
    .ifh__point-icon { width: 24px; height: 24px; }
    .ifh__point-icon img { width: 24px; height: 24px; }
  }
{% endstyle %}

{% assign point_blocks = section.blocks | where: 'type', 'point' %}

<section
  class="ifh"
  id="ifh-{{ section.id }}"
  style="
    --heading-color: {{ section.settings.heading_color }};
    --text-color: {{ section.settings.text_color }};
    --icon-color: {{ section.settings.icon_color }};
    --overlay-strong: {{ section.settings.overlay_strong }};
    --overlay-mid: {{ section.settings.overlay_mid }};
    --overlay-fade: {{ section.settings.overlay_fade }};
    --heading-size: {{ section.settings.heading_font_size }}px;
    --body-size: {{ section.settings.body_font_size }}px;
    --shimmer-opacity: {{ section.settings.shimmer_opacity | divided_by: 100.0 }};
    --section-height: {{ section.settings.section_height }}px;
    --content-width: {{ section.settings.content_width }}px;
    --bg-position: {{ section.settings.bg_position }};
    --padding-top: {{ section.settings.padding_top }}px;
    --padding-bottom: {{ section.settings.padding_bottom }}px;
    --mobile-content-bg: {{ section.settings.mobile_content_bg }};
  "
>
  {% if section.settings.bg_image != blank or section.settings.bg_image_mobile != blank %}
    <div class="ifh__bg ifh__bg--desktop">
      {% if section.settings.bg_image != blank %}
        {{ section.settings.bg_image | image_url: width: 2000 | image_tag: loading: 'lazy', widths: '800,1200,1600,2000' }}
      {% endif %}
      <div class="ifh__bg-overlay"></div>
    </div>
    <div class="ifh__bg ifh__bg--mobile">
      {% if section.settings.bg_image_mobile != blank %}
        {{ section.settings.bg_image_mobile | image_url: width: 800 | image_tag: loading: 'lazy', widths: '400,600,800' }}
      {% elsif section.settings.bg_image != blank %}
        {{ section.settings.bg_image | image_url: width: 800 | image_tag: loading: 'lazy', widths: '400,600,800' }}
      {% endif %}
    </div>
  {% endif %}
  <div class="ifh__shimmer"></div>

  <div class="ifh__container">
    <div class="ifh__content">
      {% if section.settings.heading != blank %}
        <h2 class="ifh__heading" data-ifh-animate data-delay="0">{{ section.settings.heading }}</h2>
      {% endif %}

      {% if section.settings.body != blank %}
        <div class="ifh__body" data-ifh-animate data-delay="1">{{ section.settings.body }}</div>
      {% endif %}

      {% if point_blocks.size > 0 or section.settings.points_heading != blank %}
        <div class="ifh__points-section" data-ifh-animate data-delay="2">
          {% if section.settings.points_heading != blank %}
            <h3 class="ifh__points-heading">{{ section.settings.points_heading }}</h3>
          {% endif %}
          {% if point_blocks.size > 0 %}
            <div class="ifh__points">
          {% for block in point_blocks %}
            <div class="ifh__point" {{ block.shopify_attributes }}>
              <span class="ifh__point-icon">
                {% if block.settings.icon_image != blank %}
                  {{ block.settings.icon_image | image_url: width: 56 | image_tag: loading: 'lazy' }}
                {% else %}
                  <svg viewBox="0 0 20 20" fill="none"><path d="M3 10.5L8 15.5L17 6.5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
                {% endif %}
              </span>
              <span class="ifh__point-text">
                {% if block.settings.title != blank %}
                  <strong class="ifh__point-title">{{ block.settings.title }}</strong>
                {% endif %}
                {{ block.settings.text }}
              </span>
            </div>
          {% endfor %}
            </div>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var s = document.getElementById('ifh-{{ section.id }}');
    if (!s) return;
    var els = s.querySelectorAll('[data-ifh-animate]');
    var obs = new IntersectionObserver(function (entries) {
      entries.forEach(function (e) {
        if (e.isIntersecting) {
          var d = parseInt(e.target.getAttribute('data-delay') || '0', 10);
          setTimeout(function () { e.target.classList.add('is-visible'); }, d * 150);
          obs.unobserve(e.target);
        }
      });
    }, { threshold: 0.1 });
    els.forEach(function (el) { obs.observe(el); });
  });
</script>

