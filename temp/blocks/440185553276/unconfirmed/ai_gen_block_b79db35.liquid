{% doc %}
  @prompt
    make me an image box
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-box-{{ ai_gen_id }} {
    display: block;
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-image-box__wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: auto;
  }

  .ai-image-box__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .ai-image-box__placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: {{ block.settings.aspect_ratio }};
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-image-box__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-image-box__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-image-box__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity }};
    pointer-events: none;
  }

  .ai-image-box__content-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: {{ block.settings.vertical_alignment }};
    align-items: {{ block.settings.horizontal_alignment }};
    padding: {{ block.settings.content_padding }}px;
    text-align: {{ block.settings.text_alignment }};
    z-index: 2;
  }

  .ai-image-box__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 12px 0;
    font-weight: 600;
  }

  .ai-image-box__text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    margin: 0;
  }

  .ai-image-box__button-{{ ai_gen_id }} {
    display: inline-block;
    margin-top: 20px;
    padding: 12px 24px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    transition: background-color 0.3s ease;
  }

  .ai-image-box__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
  }

  @media screen and (max-width: 749px) {
    .ai-image-box__heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }

    .ai-image-box__text-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.text_size }}px * 0.9);
    }

    .ai-image-box__content-{{ ai_gen_id }} {
      padding: calc({{ block.settings.content_padding }}px * 0.7);
    }
  }
{% endstyle %}

<div class="ai-image-box-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-image-box__wrapper-{{ ai_gen_id }}">
    {% if block.settings.image %}
      <img
        src="{{ block.settings.image | image_url: width: 2000 }}"
        alt="{{ block.settings.image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
        class="ai-image-box__image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-image-box__placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-image-box__empty-state-{{ ai_gen_id }}">
          Add an image to get started
        </div>
      </div>
    {% endif %}

    {% if block.settings.show_overlay %}
      <div class="ai-image-box__overlay-{{ ai_gen_id }}"></div>
    {% endif %}

    {% if block.settings.heading != blank or block.settings.text != blank or block.settings.button_text != blank %}
      <div class="ai-image-box__content-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h3 class="ai-image-box__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h3>
        {% endif %}

        {% if block.settings.text != blank %}
          <div class="ai-image-box__text-{{ ai_gen_id }}">{{ block.settings.text }}</div>
        {% endif %}

        {% if block.settings.button_text != blank and block.settings.button_link != blank %}
          <a href="{{ block.settings.button_link }}" class="ai-image-box__button-{{ ai_gen_id }}">
            {{ block.settings.button_text }}
          </a>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>

