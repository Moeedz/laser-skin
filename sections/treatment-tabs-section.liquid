  function togglePackages(tabId) {
    const packagesContainer = document.querySelector(`[data-packages="${tabId}"]`);
    packagesContainer.classList.toggle('active');
  }

  function toggleSessionOptions(packageId) {
    const sessionOptions = document.getElementById(`session-${packageId}`);
    sessionOptions.classList.toggle('active');
  }

  function toggleCollapsible(collapsibleId) {
    const collapsibleTab = document.getElementById(collapsibleId);
    collapsibleTab.classList.toggle('active');
  }

  function openConsultationModal(tabId) {
    const modal = document.getElementById(`consultation-modal-${tabId}`);
    if (modal) {
      modal.classList.add('active');
      document.body.style.overflow = 'hidden';
    }
  }

  function closeConsultationModal(tabId) {
    const modal = document.getElementById(`consultation-modal-${tabId}`);
    if (modal) {
      modal.classList.remove('active');
      document.body.style.overflow = '';
    }
  }

  function openPhoneHoursModal(tabId) {
    closeConsultationModal(tabId);
    const modal = document.getElementById(`phone-hours-modal-${tabId}`);
    if (modal) {
      modal.classList.add('active');
      document.body.style.overflow = 'hidden';
      checkStoreStatus(tabId);
      highlightCurrentDay(tabId);
    }
  }

  function closePhoneHoursModal(tabId) {
    const modal = document.getElementById(`phone-hours-modal-${tabId}`);
    if (modal) {
      modal.classList.remove('active');
      document.body.style.overflow = '';
    }
  }

  function checkStoreStatus(tabId) {
    const statusElement = document.getElementById(`store-status-${tabId}`);
    if (!statusElement) return;
    const now = new Date();
    const currentDay = now.getDay();
    const currentHour = now.getHours();
    const currentMinute = now.getMinutes();
    const currentTime = currentHour * 60 + currentMinute;
    const modal = document.getElementById(`phone-hours-modal-${tabId}`);
    const hoursRows = modal.querySelectorAll('.hours-row');
    const todayRow = hoursRows[currentDay === 0 ? 6 : currentDay - 1];
    const hoursText = todayRow.querySelector('.time').textContent.trim();
    let isOpen = false;
    if (hoursText.toLowerCase() !== 'closed') {
      const matches = hoursText.match(/(\d{1,2}):(\d{2})(AM|PM)-(\d{1,2}):(\d{2})(AM|PM)/i);
      if (matches) {
        let openHour = parseInt(matches[1]);
        const openMinute = parseInt(matches[2]);
        const openPeriod = matches[3].toUpperCase();
        let closeHour = parseInt(matches[4]);
        const closeMinute = parseInt(matches[5]);
        const closePeriod = matches[6].toUpperCase();
        if (openPeriod === 'PM' && openHour !== 12) openHour += 12;
        if (openPeriod === 'AM' && openHour === 12) openHour = 0;
        if (closePeriod === 'PM' && closeHour !== 12) closeHour += 12;
        if (closePeriod === 'AM' && closeHour === 12) closeHour = 0;
        const openTime = openHour * 60 + openMinute;
        const closeTime = closeHour * 60 + closeMinute;
        isOpen = currentTime >= openTime && currentTime < closeTime;
      }
    }
    const statusIcon = statusElement.querySelector('.status-icon');
    const statusText = statusElement.querySelector('.status-text');
    const closedMessage = document.getElementById(`closed-message-${tabId}`);
    const callButton = document.getElementById(`call-button-${tabId}`);
    if (isOpen) {
      statusElement.classList.remove('closed');
      statusIcon.textContent = 'âœ“';
      statusText.textContent = 'We are currently open';
      if (closedMessage) closedMessage.style.display = 'none';
      if (callButton) {
        callButton.textContent = 'Call Now';
        callButton.classList.remove('disabled');
        callButton.style.pointerEvents = 'auto';
        callButton.style.background = '#007AFF';
      }
    } else {
      statusElement.classList.add('closed');
      statusIcon.textContent = 'âœ—';
      statusText.textContent = 'We are currently closed';
      if (closedMessage) closedMessage.style.display = 'block';
      if (callButton) {
        callButton.textContent = 'Currently Closed';
        callButton.classList.add('disabled');
        callButton.style.pointerEvents = 'none';
        callButton.style.background = '#cccccc';
      }
    }
  }

  function highlightCurrentDay(tabId) {
    const modal = document.getElementById(`phone-hours-modal-${tabId}`);
    if (!modal) return;
    const now = new Date();
    const currentDay = now.getDay();
    const hoursRows = modal.querySelectorAll('.hours-row');
    hoursRows.forEach(row => row.classList.remove('current-day'));
    const todayRow = hoursRows[currentDay === 0 ? 6 : currentDay - 1];
    if (todayRow) todayRow.classList.add('current-day');
  }

  function scrollToFAQ(sectionId) {
    const targetElement = document.getElementById(sectionId);
    if (targetElement) {
      const headerOffset = 80;
      const elementPosition = targetElement.getBoundingClientRect().top;
      const offsetPosition = elementPosition + window.pageYOffset - headerOffset;
      window.scrollTo({ top: offsetPosition, behavior: 'smooth' });
    } else {
      const sections = document.querySelectorAll('[id*="faq"]');
      if (sections.length > 0) {
        const headerOffset = 80;
        const elementPosition = sections[0].getBoundingClientRect().top;
        const offsetPosition = elementPosition + window.pageYOffset - headerOffset;
        window.scrollTo({ top: offsetPosition, behavior: 'smooth' });
      }
    }
  }

  const appointmentState = {};
  const calendarState = {};

  function initCalendar(packageId) {
    if (!calendarState[packageId]) {
      calendarState[packageId] = {
        currentMonth: new Date().getMonth(),
        currentYear: new Date().getFullYear(),
        selectedDate: null
      };
    }
    renderCalendar(packageId);
    setupCalendarNav(packageId);
  }

  function renderCalendar(packageId) {
    const state = calendarState[packageId];
    const datesContainer = document.getElementById(`dates-${packageId}`);
    const monthYearDisplay = document.getElementById(`month-year-${packageId}`);
    if (!datesContainer || !monthYearDisplay) {
      console.error('Calendar elements not found for package:', packageId);
      return;
    }
    const monthNames = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
    monthYearDisplay.textContent = `${monthNames[state.currentMonth]} ${state.currentYear}`;
    datesContainer.innerHTML = '';
    const firstDay = new Date(state.currentYear, state.currentMonth, 1).getDay();
    const daysInMonth = new Date(state.currentYear, state.currentMonth + 1, 0).getDate();
    const today = new Date();
    today.setHours(0, 0, 0, 0);
    const adjustedFirstDay = firstDay === 0 ? 6 : firstDay - 1;
    const closedDays = [0, 1, 4];
    for (let i = 0; i < adjustedFirstDay; i++) {
      const emptyDate = document.createElement('div');
      emptyDate.className = 'calendar-date other-month';
      datesContainer.appendChild(emptyDate);
    }
    for (let day = 1; day <= daysInMonth; day++) {
      const dateElement = document.createElement('div');
      dateElement.className = 'calendar-date';
      dateElement.textContent = day;
      const currentDate = new Date(state.currentYear, state.currentMonth, day);
      currentDate.setHours(0, 0, 0, 0);
      const dayOfWeek = currentDate.getDay();
      if (currentDate < today) {
        dateElement.classList.add('past');
      } else if (closedDays.includes(dayOfWeek)) {
        dateElement.classList.add('disabled');
      } else if (currentDate.getTime() === today.getTime()) {
        dateElement.classList.add('today');
      }
      if (state.selectedDate && currentDate.getTime() === new Date(state.selectedDate).getTime()) {
        dateElement.classList.add('selected');
      }
      if (!dateElement.classList.contains('past') && !dateElement.classList.contains('disabled')) {
        dateElement.addEventListener('click', () => selectDate(packageId, currentDate));
      }
      datesContainer.appendChild(dateElement);
    }
  }

  function setupCalendarNav(packageId) {
    const prevBtn = document.getElementById(`prev-month-${packageId}`);
    const nextBtn = document.getElementById(`next-month-${packageId}`);
    if (prevBtn) {
      prevBtn.onclick = () => {
        calendarState[packageId].currentMonth--;
        if (calendarState[packageId].currentMonth < 0) {
          calendarState[packageId].currentMonth = 11;
          calendarState[packageId].currentYear--;
        }
        renderCalendar(packageId);
      };
    }
    if (nextBtn) {
      nextBtn.onclick = () => {
        calendarState[packageId].currentMonth++;
        if (calendarState[packageId].currentMonth > 11) {
          calendarState[packageId].currentMonth = 0;
          calendarState[packageId].currentYear++;
        }
        renderCalendar(packageId);
      };
    }
  }

  function selectDate(packageId, date) {
    calendarState[packageId].selectedDate = date;
    renderCalendar(packageId);
    updateTimeSlots(packageId, date);
    if (!appointmentState[packageId]) {
      appointmentState[packageId] = { link: '', date: '', time: '' };
    }
    appointmentState[packageId].date = date.toISOString().split('T')[0];
    appointmentState[packageId].time = '';
    const closedDayMessage = document.getElementById(`closed-day-message-${packageId}`);
    if (closedDayMessage) {
      closedDayMessage.classList.remove('active');
    }
    checkAppointmentComplete(packageId);
  }

  function updateTimeSlots(packageId, date) {
    const timePanelHeader = document.getElementById(`time-header-${packageId}`);
    const timeScrollContainer = document.getElementById(`time-scroll-${packageId}`);
    if (!timePanelHeader || !timeScrollContainer) return;
    const dayNames = ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'];
    const monthNames = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
    const dayOfWeek = dayNames[date.getDay()];
    const day = date.getDate();
    const month = monthNames[date.getMonth()];
    const year = date.getFullYear();
    timePanelHeader.textContent = `${dayOfWeek}, ${day} ${month} ${year}`;
    const selectedDayOfWeek = date.getDay();
    let timeSlots = [];
    if (selectedDayOfWeek === 6) {
      timeSlots = generateTimeSlots(10, 16);
    } else {
      timeSlots = generateTimeSlots(10, 18);
    }
    timeScrollContainer.innerHTML = '';
    timeSlots.forEach(time => {
      const slotElement = document.createElement('div');
      slotElement.className = 'time-slot-option';
      slotElement.innerHTML = `<span class="time-slot-label">${time}</span><div class="time-slot-radio"></div>`;
      slotElement.addEventListener('click', () => selectTimeSlot(packageId, time, slotElement));
      timeScrollContainer.appendChild(slotElement);
    });
  }

  function generateTimeSlots(startHour, endHour) {
    const slots = [];
    for (let hour = startHour; hour <= endHour; hour++) {
      const period = hour >= 12 ? 'PM' : 'AM';
      const displayHour = hour > 12 ? hour - 12 : (hour === 0 ? 12 : hour);
      slots.push(`${displayHour}:00 ${period}`);
    }
    return slots;
  }

  function selectTimeSlot(packageId, time, element) {
    const timeScrollContainer = document.getElementById(`time-scroll-${packageId}`);
    if (timeScrollContainer) {
      timeScrollContainer.querySelectorAll('.time-slot-option').forEach(slot => {
        slot.classList.remove('selected');
      });
    }
    element.classList.add('selected');
    if (!appointmentState[packageId]) {
      appointmentState[packageId] = { link: '', date: '', time: '' };
    }
    appointmentState[packageId].time = time;
    checkAppointmentComplete(packageId);
  }

  function checkAppointmentComplete(packageId) {
    const state = appointmentState[packageId];
    const selectButton = document.getElementById(`select-btn-${packageId}`);
    let isClosedDay = false;
    if (state && state.date) {
      const dateObj = new Date(state.date + 'T00:00:00');
      const dayOfWeek = dateObj.getDay();
      const closedDays = [0, 1, 4];
      isClosedDay = closedDays.includes(dayOfWeek);
    }
    if (state && state.link && state.date && state.time && !isClosedDay) {
      selectButton.classList.add('enabled');
      selectButton.onclick = function() {
        addToCartWithAppointment(state.link, state.date, state.time);
      };
    } else {
      selectButton.classList.remove('enabled');
      selectButton.onclick = null;
    }
  }

  function addToCartWithAppointment(cartLink, appointmentDate, appointmentTime) {
    const dateObj = new Date(appointmentDate + 'T00:00:00');
    const formattedDate = dateObj.toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' });
    const separator = cartLink.includes('?') ? '&' : '?';
    const finalUrl = `${cartLink}${separator}properties[Appointment Date]=${encodeURIComponent(formattedDate)}&properties[Appointment Time]=${encodeURIComponent(appointmentTime)}`;
    window.location.href = finalUrl;
  }

  document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('.session-option').forEach(option => {
      option.addEventListener('click', function() {
        const parent = this.parentElement;
        const packageId = parent.id.replace('session-', '');
        parent.querySelectorAll('.session-option').forEach(opt => {
          opt.classList.remove('selected');
        });
        this.classList.add('selected');
        const selectedLink = this.getAttribute('data-link');
        if (!appointmentState[packageId]) {
          appointmentState[packageId] = { link: '', date: '', time: '' };
        }
        appointmentState[packageId].link = selectedLink;
        const appointmentPicker = document.getElementById(`appointment-${packageId}`);
        if (appointmentPicker) {
          appointmentPicker.classList.add('active');
          setTimeout(() => {
            initCalendar(packageId);
          }, 100);
        }
        const selectButton = parent.querySelector('.session-select');
        selectButton.classList.add('enabled');
        checkAppointmentComplete(packageId);
      });
    });

    document.querySelectorAll('.consultation-modal-overlay').forEach(overlay => {
      overlay.addEventListener('click', function(e) {
        if (e.target === this) {
          this.classList.remove('active');
          document.body.style.overflow = '';
        }
      });
    });

    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        document.querySelectorAll('.consultation-modal-overlay.active').forEach(modal => {
          modal.classList.remove('active');
          document.body.style.overflow = '';
        });
      }
    });
  });
